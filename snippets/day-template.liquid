
{% assign array = article.content | split: "|" %}
{% assign dayNumber = array[0] %}
{% assign daySmallPicture = array[1] | append: ".png" %} 
{% assign dayTip = array[2] %}

<div class="day-template">
    <div class="container">
        <div class="day-title">
            Habit Day {{ dayNumber  }}
        </div>
    </div>
</div>

<div class="tip-picture">  
   <div class="container">
    <img class="tip-bg-img" src="{{ 'tiphub-curalin-tips.png' | asset_url }}"  alt="">  
    <div class="day-tips">
        <div class="image-day">
            <img src="{{ daySmallPicture | file_url }}" width="114" height="104" alt="">
        </div>
        <div class="text-day">
            <div class="day-title-tip">Curalin Tips</div>
            <div class="day-tip-text">{{ dayTip }}</div>
        </div>

    </div>
   </div> 
</div>
<div class="tip-blog">
    <div class="container">
        <div class="related-tip">
            <div class="related-article"></div>
            <div class="related-picture">{{ article.featured_image }}</div>
        </div>
    </div>
</div>

 <style>
    .day-template .container .day-title{
        padding: 20px 0;
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: 56px;
        line-height: 58px;
        letter-spacing: -0.03em;
        color: #5E8F8F;
        text-align: left;
    }

 
    .tip-picture {
        position: relative;
        background: #FFE17D;
        
    }
    .tip-bg-img {
      position: absolute;
      top: -50px;
      right: 0;
    }
 
    .image-day {
        display: flex;
        align-items: center;
        max-width: 50%;
    }

    .text-day {
        max-width: 50%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .day-tips {
        padding: 5%;
        display: flex;
        justify-content: center;
        gap:10px;
    }

    .image-day {
        max-width: 15%;
    }

    .day-title-tip {
       font-family: 'PP Radio Grotesk';
       font-weight: 700;
       font-size: 48px;
       line-height: 53px;
       text-align: center;
       color: #424733;      
    }

    .day-tip-text {
        font-family: 'Open Sans';
        font-weight: 400;
        font-size: 36px;
        line-height: 50px;
    }

    .related-tip {
        display: flex;
    }



    @media screen and (max-width: 768px) {
        .day-template .container .day-title {
            font-size: 7vw;
            line-height: 7vw;
        }

        .day-title-tip {
            font-size: 4vw;
            line-height: 4vw;
        }

        .day-tip-text {
            font-size: 3vw;
            line-height: 3vw;
        }
    }
 </style>
