
{% assign array = article.content | split: "|" %}
{% assign dayNumber = array[0] %}
{% assign daySmallPicture = array[1] | append: ".png" %} 

<div class="day-template">
    <div class="container">
        <div class="day-title">
            Habit Day {{ dayNumber  }}
        </div>
    </div>
</div>

<div class="tip-picture">
    <div class="tip-bg-img">
        <img src="{{ 'tiphub-curalin-tips.png' | asset_url }}" width="2881" height="369" alt="">
    </div>
   <div class="container">
    <div class="day-tips">
        <div class="image-day">
            <img src="{{ daySmallPicture | file_url }}" width="114" height="104" alt="">
        </div>
        <div class="text-day">
            <div class="day-title">Curalin Tips</div>
            
        </div>

    </div>
   </div> 
</div>

 <style>
    .day-template .container .day-title{
        padding: 20px 0;
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: 56px;
        line-height: 58px;
        letter-spacing: -0.03em;
        color: #5E8F8F;
        text-align: left;
    }

    .tip-picture {
        position: relative;
        
    }
    .tip-bg-img {
        position: absolute;
        min-height: 150px;
    }

    .day-tips {
        position: relative;
        padding: 5%;
        display: flex;
        justify-content: center;
        gap:10px;
    }

    .day-title {
       font-family: 'PP Radio Grotesk';
       font-weight: 700;
       font-size: 48px;
       line-height: 53px;
       text-align: center;
       color: #424733;      
    }



    @media screen and (max-width: 768px) {
        .day-template .container .day-title {
            font-size: 7vw;
            line-height: 7vw;
        }

        .day-title {
            font-size: 6vw;
            line-height: 6vw;
        }
    }
 </style>
