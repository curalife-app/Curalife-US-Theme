{% if shop.name == "CuraLife Global" %}
  {% assign linkAdd = '/collections/all' %}
{% elsif shop.name == "CuraLife" %}
  {% assign linkAdd = '/products/curalin-pack-holidays2022' %}
{% endif %}


<div class="floating-cta">
    <button class="btn-cta" onclick="LinkToProduct(this, '{{ linkAdd }}')">Try CuraLin</button>
</div>


<!-- Floating CTA & btn General Theme Style -->
<style>

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
  box-sizing: border-box
}

a,
a:focus,
a:hover {
  text-decoration: none
}
    button {
        font-family: "Poppins", sans-serif;
        font-size: 100%;
        line-height: 1.15;
        margin: 0;
        padding: 0;
        cursor: pointer;
        border-radius: 0;
        -webkit-appearance: none
    }
    .btn-cta {
      background: var(--dark-green);
      box-shadow: .625rem .625rem .825rem #0000004d;
      border-radius: 1.25rem;
      padding: .875rem;
      max-width: 39.1875rem;
      display: inline-block;
      font-weight: 700;
      font-size: 1.867375rem;
      line-height: 1.2;
      text-align: center;
      color: #fff;
      width: 100%;
      -webkit-transition: all var(--transition);
      -o-transition: all var(--transition);
      transition: all var(--transition)
    }

    .btn-cta b {
      font-weight: 700
    }

    .btn-cta:hover {
      background-color: #fff;
      color: var(--green);
      -webkit-transition: all var(--transition);
      -o-transition: all var(--transition);
      transition: all var(--transition)
    }
    .floating-cta {
      position: fixed;
      left: 20px;
      right: 0;
      bottom: 1.25rem;
      z-index: 20;
      pointer-events: none;
      -webkit-transition: opacity var(--transition), visibility var(--transition);
      -o-transition: opacity var(--transition), visibility var(--transition);
      transition: opacity var(--transition), visibility var(--transition)
    }

    .floating-cta .btn-cta {
      max-width: 18.375rem;
      font-size: 2.5rem;
      pointer-events: auto
    }

    .floating-cta:not(.show) {
      opacity: 0;
      visibility: hidden
    }

    .floating-cta:not(.show) .btn-cta {
      pointer-events: none
    }

    @media screen and (max-width: 991px) {
      .btn-cta {
        max-width: 29.0625rem;
        font-size: 1.375rem
      }

      .floating-cta .btn-cta {
        max-width: 15.625rem;
        font-size: 1.875rem
      }

    }

    @media screen and ( max-width: 768px) {

      .btn-cta {
        max-width: 19.25rem;
        padding: .5625rem .625rem;
        font-size: 1.125rem;
        font-weight: 400
      }

      .btn-cta b {
        font-weight: 700
      }


    }
  </style>

  <!-- Floating CTA Style -->
  <style>
      .btn-cta {
          border: none;
          background: {% if regColor %}#FDD246 {% else %} #4B643D {% endif %};
          color: {% if regColor %}black {% else %}white {% endif %} ;
          font-weight: 400;
      }

      .btn-cta:hover {
          background: {% if regColor %}#e6bb2c {% else %} #314227 {% endif %};
      }

      @media screen and (max-width: 768px) {

        .floating-cta {
          text-align: left
        }

        .floating-cta .btn-cta {
          font-weight: 600;
          border-radius: .625rem
        }

          .floating-cta .btn-cta {
              max-width: calc(100vw - 40px);
          }

      }
  </style>


  <script>
    function LinkToProduct(element, url) {
      woopra.track('Click CTA', {
        button_title: element.innerText
      });

      window.location.href = url;
    }

    const get_utm = window.location.search.substring(1);
    if (get_utm) {
        let product_link = document.querySelectorAll('.btn-cta, .floating-cta .btn-cta');
        window.onload = function () {
            for (let i = 0; i < product_link.length; i++) {
                product_link[i].href = product_link[i].href + "?" + get_utm
            }
        }
    }


  </script>
