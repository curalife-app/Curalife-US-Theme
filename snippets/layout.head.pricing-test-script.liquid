<script>
  if ($.cookie('_gaexp'))
    if ($.cookie('_gaexp').endsWith('1') && $.cookie('_gaexp').startsWith('GAX1.2.EZO')) {
      let redirectPages = [
        '/collections/all',
        '/collections/all-2',
        '/collections/all-holidays2022',
        '/products/curalin-pack-holidays2022',
        '/products/curalin-holidays2022',
        '/products/curalin-3-pack-holidays2022',
        '/products/curalin-6-pack-holidays2022',
        '/products/curalin-2-pack-holidays2022',
        '/pages/glucose-support-lp01n-v2-holidays2022'];

      if (redirectPages.includes(window.location.pathname)) {
        window.location.replace(window.location.pathname + '-p');
      }

      window.addEventListener('DOMContentLoaded', function() {
          (function($) {
            let linksQuery = '';
            redirectPages.forEach((value, index)=>{linksQuery += 'a[href="' + redirectPages[index] + '"], '});
            linksQuery = linksQuery.slice(0, -2);
            console.log(linksQuery);
            $(linksQuery).each(function () {
              $(this).attr('href', $(this).attr('href') + '-p');
            });
          })(jQuery);
      });
    }
  }
</script>