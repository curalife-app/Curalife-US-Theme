{% if request.path contains '/collection' %}<a href="{{ product.url }}">{% endif %}
<div class="product-thumbnail picture">
  {% render 'snow-effect', hasAlreadyRun: true %}

  {% if product.metafields.my_fields.pack_items_quantity > 1 %}
    <div class="save-badge">SAVE {{ savePrice }}</div>
  {% endif %}

  <div class="product-image-wrapper">
    <div class="thumbnail-notice">
      <p>FREE!</p>
      <p>{{ product.metafields.my_fields.subtitle }}</p>
    </div>

    <img class="product-image" src="{{ product.featured_image.src | img_url: 'original' }}" alt="" loading="lazy">
  </div>

  <img class="snow-bottom" src="{{ 'hs-bottom-snow-small.png' | asset_url }}" alt="snow season" loading="lazy">
</div>
{% if request.path contains '/collection' %}</a>{% endif %}

<style>
  .product-thumbnail {
    background: linear-gradient(#A9151E, #BE171F);
    height: 350px;
    position: relative;
    overflow: hidden;
    width: 100%;
    cursor: {% if request.path contains '/collections' %}pointer{% else %}unset{% endif %};
  }

  .product-thumbnail::after {
    background: white;
    height: 30px;
    width: 100%;
    position: absolute;
    bottom: 0;
  }

  .product-thumbnail img.product-image {
    object-fit: contain;
    position: absolute;
    bottom: 0;
    z-index: 1;
  }

  .product-thumbnail .after-price-notice {
    color: #C00101;
    font-size: clamp(14px, 2vw, 18px);
    font-weight: bold;
    margin: 10px 0;
    margin: unset;
  }

  .product-thumbnail .thumbnail-notice {
    color: white;
    text-align: center;
    position: absolute;
    top: 20px;
    left: 50px;
  }

  .product-thumbnail .thumbnail-notice::before {
    content: "";
    background-image: url("{{ 'hs-product-thumbnail-notice-arrow.svg' | asset_url }}");
    width: 50px;
    height: 60px;
    position: absolute;
    left: -30px;
    z-index: 10;
  }

  .product-thumbnail .thumbnail-notice p {
    margin: unset;
  }

  .product-thumbnail .thumbnail-notice p:first-child {
    font-weight: bold;
    font-size: 1.5em;
  }

  .product-thumbnail .save-badge {
    background-image: url("{{ 'hs-badge-save.png' | asset_url }}");
    background-size: contain;
    background-repeat: no-repeat;
    position: absolute;
    top: 0;
    right: 20px;
    width: 100px;
    z-index: 4;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: clamp(20px, 2vw, 22px);
    text-align: center;
    color: #C00101;
    display: flex;
    flex-direction: column;
    padding: 4.5rem 0;
  }

  .product-thumbnail .snow {
    opacity: 0;
    transition: 0.8s;
  }

  .product-card:hover .snow {
    opacity: 0.8;
  }

  .product-thumbnail img.snow-bottom {
    position: absolute;
    bottom: 28px;
  }

  @media screen and (max-width: 760px) {
    .product-thumbnail {
      height: 240px;
    }
  }
</style>