
<section id="collection-exercize-video">
  <img class="exercize-img-swoosh" src="{{ 'video-exercize-swoosh.png' | asset_url }}" width="971" height="671" alt="Swoosh">
  <img class="exercize-img-leaf" src="{{ 'video-exercize-leaf.png' | asset_url }}" width="187" height="184" alt="Swoosh">
  <img class="exercize-img-leaf-mb" src="{{ 'video-exercize-leaf-mb.png' | asset_url }}" width="50" height="49" alt="Swoosh">
  <div class="container">
   
      <div id="site">
        <div id="player">
          <div class="player">
            {% for exercize_video in exercize_videos %} 
              {% if forloop.index == 0 %}
            <div class="video-title">
             
               {{ exercize_video | split: "*" | first }}
              
            </div>
            {% endif %}
          {% endfor %}
            <p class="main-video-timer">Video  8:43</p>
            <div class="player__video">
              <!-- Current video is for reference only. It will be generated by JavaScript code. -->
              <iframe id="current-video" style="background-color: var(--light-green); padding:0.5em" width="560" height="315" src="https://www.youtube.com/embed/BWIPZvwcnX8" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
          </div>
        </div>
        <div id="gallery">
          <div class="related-videos">Related Videos</div>
          <div class="gallery">It will be generated by JavaScript code.</div>
        </div>
      </div>
   
  </div>
</section>


<style>

  #collection-exercize-video {
    position: relative;
  }

  .exercize-img-swoosh {
    position: absolute;
    top: 120px;
    right: 0;
  }

  .exercize-img-leaf {
    position: absolute;
    top: 600px;
  }

  .exercize-img-leaf-mb{
    display: none;
  }

   
  #site {
    display: flex;
    min-height: 100vh;
    justify-content: center;  
  }

  #player {}

  .player {
    margin: auto;
    
    padding: 1em;
    &__video {
      height: 0;
      overflow: hidden;
      padding-bottom: 56.25%;
      position: relative;
      iframe {
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    }
  }

  .video-title {
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: clamp(30px, 3vw, 45px);
    line-height: clamp(30px, 3vw, 45px);
    letter-spacing: -0.01em;
    color: #404733;
    padding-bottom: 0.3em;
  }

  .main-video-timer {
    font-family: 'PP Radio Grotesk';
    font-weight: 400;
    font-size: clamp(16px, 3vw, 22px);
    letter-spacing: -0.01em;
    color: #404733;
  }

  

  #gallery {}

  .gallery {
    display: flex;
    flex-direction: column;
    padding-top: 1em;
 
  }

  .related-videos {
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: 22px;
    letter-spacing: -0.01em;
    padding: 4em 1em 1em;
  }

  .gallery__item { 
    cursor: pointer;
    display: flex;
    padding: 0 .75em;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: 23px;
    line-height: 30px;
    letter-spacing: -0.01em;

  }

  .gallery__item__img {
    background: #333333;
    border-radius: 10px;
    width: 50%;
    margin-bottom: 0.3em;
    padding: 0.3em;
  }
  .gallery__item__span {
    width: 50%;
    padding-left: 1em;
  }

  .gallery__item__time {
    
    font-weight: 400;
  }

  @media screen and (max-width: 768px) {
   .exercize-img-swoosh {  
     top: 300px;
   }

   .exercize-img-leaf {
    display: none;
   }

   .exercize-img-leaf-mb {
    display: block;
    position: absolute;
    top: 0;
   }
  
    #site {    
      flex-wrap: wrap; 
      
    }

    .video-title {
      font-size: 7vw;
      line-height: 7vw;
    }

    .related-videos {
      padding: 1em;
    }

    .gallery {
      padding: 1em;
    }

  }


  @media screen and (max-width: 390px) {
    .gallery__item {
      padding: unset;
    }
  }


</style>

<script>
  

  // YouTube sintaxis for embedded videos and images

  const ytVideoPrefix = `https://www.youtube.com/embed/`
  const ytImagePathPrefix = `https://i.ytimg.com/vi/`
  const ytImagePathSufix = `/hqdefault.jpg`

  // Array of Videos

  let arrVideos = [
    {name: 'Cat & Mouse', timeVideo: 'video: 8:43', data: 'BWIPZvwcnX8'},
    {name: 'Cat Man Do', timeVideo: 'video: 6:23', data: 'w0ffwDYo00Q'},
    {name: 'Let Me In!', timeVideo: 'video: 6:23', data: '4rb8aOzy9t4'},
    {name: 'TV Dinner', timeVideo: 'video: 6:23', data: 's13dLaTIHSg'},
    {name: 'Cat & Mouse', timeVideo: 'video: 6:23', data: 'BWIPZvwcnX8'},
    {name: 'Feed Me', timeVideo: 'video: 6:23', data: 'Te4wx4jtiEA'},
    {name: 'Crazy Time', timeVideo: 'video: 6:23', data: 'l5ODwR6FPRQ'},
    {name: 'Bed Sheets', timeVideo: 'video: 6:23', data: 'P3y8vc-3iVU'},
    {name: 'Box Clever', timeVideo: 'video: 6:23', data: 'ZpCl5O6tTv8'},
    {name: 'Let Me Out!', timeVideo: 'video: 6:23', data: 'HDzkaJOT_KI'},
    {name: 'Mirror Mirror', timeVideo: 'video: 6:23', data: 'G5FUH3eoizc'},
    {name: 'Window Pain', timeVideo: 'video: 6:23', data: 'XrivBjlv6Mw'},
    {name: 'Sticky Tape', timeVideo: 'video: 6:23', data: 'tV3SWjrt2rE'}
  ]

  // Current video

  let currentVideo = document.getElementById('current-video')
  currentVideo.src = `${ytVideoPrefix}${arrVideos[0].data}`

  // Add .gallery__items to .gallery

  let gallery = document.querySelector('.gallery')
  gallery.innerHTML = ``

  for (let i = 1; i < arrVideos.length; i++) {
    gallery.innerHTML += `
      <div class="gallery__item" data="${arrVideos[i].data}">
        <img class="gallery__item__img" src="${ytImagePathPrefix}${arrVideos[i].data}${ytImagePathSufix}">
        <span class="gallery__item__span">${arrVideos[i].name} <div class="gallery__item__time">${arrVideos[i].timeVideo}</div></span>
        
      </div>`
  }

  // Add event listeners

  gallery.addEventListener('click', (e) => {
    // When click on .gallery__item element
    if (e.target.classList.contains('gallery__item')) {
      currentVideo.src = `${ytVideoPrefix}${e.target.getAttribute('data')}`
    }
    // When click on .gallery__item__img element
    if (e.target.classList.contains('gallery__item__img')) {
      let data = e.target.src
      data = data.replace(ytImagePathPrefix, '')
      data = data.replace(ytImagePathSufix, '')
      currentVideo.src = `${ytVideoPrefix}${data}`
    }
    // When click on .gallery__item__span element
    if (e.target.classList.contains('gallery__item__span')) {
      console.log(e.target.innerText)
      for (let i = 0; i < arrVideos.length; i++) {
        if (arrVideos[i].name === e.target.innerText) {
          currentVideo.src = `${ytVideoPrefix}${arrVideos[i].data}`
        }
      }
    }
  });

</script>
