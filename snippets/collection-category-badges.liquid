<section id="category-badges-section" data-product-collections="{{ productCollections }}">
  <h2>{{ collection.metafields.custom.category_badges_title }}</h2>
  <div class="category-badges">
    {% for badge in collection.metafields.custom.category_badges %}
      <div class="category-badge">
        <img src="{{ badge.src | image_url }}" alt="{{ badge.altText }}">
        <h3>{{ badge.altText }}</h3>
      </div>
    {% endfor %}
</section>