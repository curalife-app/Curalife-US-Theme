<a id="back-to-top-btn" style="color: white;">Try CuraLin</a>


<style>
  #back-to-top-btn {
    background: linear-gradient(#5d8448, #4B643D);
    border: 1px solid #468734;
    color: #ffffff;
  }

   #back-to-top-btn:hover {
    background: #404733;
      border: #404733;
  }

</style>


<script>

  $('#back-to-top-btn').click(function() {
  woopra.track('Scroll To Top Click', {});
  });
  // Back To Top Button
  var btn = $('#back-to-top-btn');

  $(window).scroll(function() {
    if ($(window).scrollTop() > 600) {
      btn.addClass('show');
      if (screen.width < 760) {
        $('.helpButton').attr('style', 'bottom: 60px !important');
      }
    }
    else {
      btn.removeClass('show');
      if (screen.width < 760) {
        $('.helpButton').attr('style', 'bottom: 4px !important');
      }
    }
  });

  btn.on('click', function(e) {
    e.preventDefault();
    $('html, body').animate({scrollTop:0}, '300');
  });
  {%- comment -%}
  if($(".variant-box").last()) {
    $(".main-slider-vector-bg").hide();
  } {%- endcomment -%}
</script>



