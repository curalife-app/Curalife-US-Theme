

<section id="collection-exercise-video">
  <img class="exercise-img-swoosh" src="{{ 'video-exercise-swoosh.png' | asset_url }}" width="971" height="671" alt="Swoosh">
  <img class="exercise-img-leaf" src="{{ 'video-exercise-leaf.png' | asset_url }}" width="187" height="184" alt="Swoosh">
  <img class="exercise-img-leaf-mb" src="{{ 'video-exercise-leaf-mb.png' | asset_url }}" width="50" height="49" alt="Swoosh">
  <div class="container">
 
      <div id="site">
        <div id="player">   
          <div class="player"> 
              <div class="video-title" id="video-title">  
                {{ currentTitle }}
              </div>    
          <p class="main-video-timer">{{ currentTime }}</p> 
            <div class="player__video">
              <!-- Current video is for reference only. It will be generated by JavaScript code. -->
              <iframe id="current-video" style="background-color: var(--light-green); padding:0.5em" width="560" height="315" src="{{ currentVideo }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
          </div>   
        </div>
        <div id="gallery">
          <div class="related-videos">Related Videos</div>
          {% for arrVideo in arrVideos %}
          <div class="gallery">
            <div class="gallery__item">
             <iframe class="gallery__item__img" src="{{ arrVideo | split: "*" | last | split: ";" | last }}" frameborder="0"></iframe> 
             <span class="gallery__item__span">{{ arrVideo | split: "*" | last | split: ";" | first }} <div class="gallery__item__time">{{ arrVideo | split: "*" | last | split: ";" | first }}</div></span>
             </div>
          </div>
          {% endfor %}
        </div>
      </div>
     
  </div>
</section>


<style>

  #collection-exercise-video {
    position: relative;
  }

  .exercise-img-swoosh {
    position: absolute;
    top: 120px;
    right: 0;
  }

  .exercise-img-leaf {
    position: absolute;
    top: 600px;
  }

  .exercise-img-leaf-mb{
    display: none;
  }

   
  #site {
    display: flex;
    min-height: 100vh;
    justify-content: center;  
  }

  #player {}

  .player {
    margin: auto;
    
    padding: 1em;
    &__video {
      height: 0;
      overflow: hidden;
      padding-bottom: 56.25%;
      position: relative;
      iframe {
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    }
  }

  .video-title {
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: clamp(30px, 3vw, 45px);
    line-height: clamp(30px, 3vw, 45px);
    letter-spacing: -0.01em;
    color: #404733;
    padding-bottom: 0.3em;
  }

  .main-video-timer {
    font-family: 'PP Radio Grotesk';
    font-weight: 400;
    font-size: clamp(16px, 3vw, 22px);
    letter-spacing: -0.01em;
    color: #404733;
  }

  

  #gallery {}

  .gallery {
    display: flex;
    flex-direction: column;
    padding-top: 1em;
 
  }

  .related-videos {
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: 22px;
    letter-spacing: -0.01em;
    padding: 4em 1em 1em;
  }

  .gallery__item { 
    cursor: pointer;
    display: flex;
    padding: 0 .75em;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: 23px;
    line-height: 30px;
    letter-spacing: -0.01em;

  }

  .gallery__item__img {
    background: #333333;
    border-radius: 10px;
    width: 50%;
    margin-bottom: 0.3em;
    padding: 0.3em;
  }
  .gallery__item__span {
    width: 50%;
    padding-left: 1em;
  }

  .gallery__item__time {
    
    font-weight: 400;
  }

  @media screen and (max-width: 768px) {
   .exercise-img-swoosh {  
     top: 300px;
   }

   .exercise-img-leaf {
    display: none;
   }

   .exercise-img-leaf-mb {
    display: block;
    position: absolute;
    top: 0;
   }
  
    #site {    
      flex-wrap: wrap; 
      
    }

    .video-title {
      font-size: 7vw;
      line-height: 7vw;
    }

    .related-videos {
      padding: 1em;
    }

    .gallery {
      padding: 1em;
    }

  }


  @media screen and (max-width: 390px) {
    .gallery__item {
      padding: unset;
    }
  }


</style>

<script>
  

  // YouTube sintaxis for embedded videos and images

  {% comment %} const ytVideoPrefix = `https://www.youtube.com/embed/` {% endcomment %}
  const ytImagePathPrefix = `https://i.ytimg.com/vi/`
  const ytImagePathSufix = `/hqdefault.jpg`

  // Array of Videos
     
  {% comment %} let arrVideos = [
    {name: 'Cat & Mouse', time_video: 'video: 8:43', data: 'https://www.youtube.com/embed/BWIPZvwcnX8'},
    {name: 'Cat Man Do', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/w0ffwDYo00Q'},
    {name: 'Let Me In!', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/4rb8aOzy9t4'},
    {name: 'TV Dinner', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/s13dLaTIHSg'},
    {name: 'Cat & Mouse', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/BWIPZvwcnX8'},
    {name: 'Feed Me', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/Te4wx4jtiEA'},
    {name: 'Crazy Time', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/l5ODwR6FPRQ'},
    {name: 'Bed Sheets', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/P3y8vc-3iVU'},
    {name: 'Box Clever', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/ZpCl5O6tTv8'},
    {name: 'Let Me Out!', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/HDzkaJOT_KI'},
    {name: 'Mirror Mirror', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/G5FUH3eoizc'},
    {name: 'Window Pain', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/XrivBjlv6Mw'},
    {name: 'Sticky Tape', time_video: 'video: 6:23', data: 'https://www.youtube.com/embed/tV3SWjrt2rE'}
  ]  {% endcomment %}

  

  // Current video

  let currentVideo = document.getElementById('current-video')
  currentVideo.src = `${arrVideos[0].data}`

  // Add .gallery__items to .gallery

  let gallery = document.querySelector('.gallery')
  {% comment %} gallery.innerHTML = ``

  for (let i = 1; i < arrVideos.length; i++) {
    gallery.innerHTML += `
      <div class="gallery__item" data="${arrVideos[i].data}">
        <img class="gallery__item__img" src="${ytImagePathPrefix}${arrVideos[i].data}${ytImagePathSufix}">
        <span class="gallery__item__span">${arrVideos[i].name} <div class="gallery__item__time">${arrVideos[i].time_video}</div></span>
        
      </div>`
  } {% endcomment %}

  // Add event listeners

  gallery.addEventListener('click', (e) => {
    // When click on .gallery__item element
    if (e.target.classList.contains('gallery__item')) {
      currentVideo.src = `${ytVideoPrefix}${e.target.getAttribute('data')}`
    }
    // When click on .gallery__item__img element
    if (e.target.classList.contains('gallery__item__img')) {
      let data = e.target.src
      data = data.replace(ytImagePathPrefix, '')
      data = data.replace(ytImagePathSufix, '')
      currentVideo.src = `${ytVideoPrefix}${data}`
    }
    // When click on .gallery__item__span element
    if (e.target.classList.contains('gallery__item__span')) {
      console.log(e.target.innerText)
      for (let i = 0; i < arrVideos.length; i++) {
        if (arrVideos[i].name === e.target.innerText) {
          currentVideo.src = `${ytVideoPrefix}${arrVideos[i].data}`
        }
      }
    }
  });

</script>
