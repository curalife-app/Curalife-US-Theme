
<section class="pack-info-section">
  <div class="container">
    <div class="titles">
      <h2 class="title">Nutrition</h2>
      <p class="subtitle">Delicious recipes you’ll love to cook and eat! It’s organized in weekly plans with convenient grocery lists and even easier cooking instructions.</p>
    </div>
    <div class="product-wrapper">
   

      <img class="product-image" src="{{'retention-nutrition.png' | asset_url }}" width="342" height="237" alt="" loading="lazy">
    

    <div class="tabbed-content tabs-side">
      <div class="content">
        <div id="highlights-{{ index }}" class="item active always-active">
          <div class="highlights item-content">
            {% for highlight in product.metafields.custom.product-highlights.value %}
              <div class="highlight">
                <div class="highlight-icon"><i class="icofont-check"></i></div>
                <p><b>{{ highlight.title }}</b><br>{{ highlight.subtitle }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</section>

{% if isLastRender %}
  <style>
    .pack-info-section .titles {
      flex-direction: revert;
      justify-content: start;
      max-width: 100%;
      text-align: left;
    }

    .pack-info-section {
      background: var(--lighter-brown);
    }

    .product-wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }        

  
    .pack-info-section .highlights {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .pack-info-section .highlights .highlight {
      display: flex;
      align-items: center;
    }

    .pack-info-section .highlights .highlight p {
      margin: unset;
    }

    .pack-info-section .highlight-icon {
      background: var(--dark-green);
      color: white;
      border-radius: 50%;
      min-width: 30px;
      height: 30px;
      font-size: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 20px;
    }

 



    @media all and (max-width: 768px) {
      .product-wrapper {
        justify-content: center;
      }  


    }

  </style>
{% endif %}


