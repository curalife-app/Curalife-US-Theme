<section id="quiz-section">
  <div class="container">
    {% if checkout.email or customer.email %}
      <div data-tf-widget="E2sTfAPl" data-tf-on-submit="submit" data-tf-opacity="100" data-tf-hidden="utm_source=,utm_medium=,utm_campaign=,utm_term=,utm_content=,email={{ checkout.email }}" style="width:100%;height:500px;"></div>
    {% elsif %}
      <div data-tf-widget="E2sTfAPl" data-tf-on-submit="submit" data-tf-opacity="100" data-tf-hidden="utm_source=,utm_medium=,utm_campaign=,utm_term=,utm_content=,email={{ customer.email }}" style="width:100%;height:500px;"></div>
    {% else %}
      <script>console.error("No Email Found")</script>
    {% endif %}
    <script src="//embed.typeform.com/next/embed.js"></script>
  </div>
</section>

<style>
  .fQvGaO {
    margin: unset;
  }

  #quiz-section h2 {
    margin-bottom: 20px;
    color: #424733;
    font-family: 'PP Radio Grotesk';
    font-size: 34px;
    font-weight: 700;
    text-align: center;
  }
</style>

<script>
  function submit(event) {
    $("#quiz-section").css("visibility", "hidden").animate({ opacity: 0.0 }, 1000);
    $("#quiz-section").height(0);
    woopra.track('Finished Onboarding Quiz', {});
  }
</script>