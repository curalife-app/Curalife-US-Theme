
<header class="page-header" id="page-header">
    <div class="container">
        <div class="main-logo">
            <img src="{{ 'logo-black-friday.svg' | asset_url }}" width="308" height="92" alt="logo">
        </div>
        
        {% if isTimer %}
            {% render 'countdown-timer-cyber-monday' %}
        {% endif %}

        <div class="buttons-container">
            <div class="off-container">
                <div class="up-to">UP TO</div>
                <div class="thirty-off"> 40% OFF</div>
            </div>
            <div class="buy-btn">
                <a class="main-btn" id='main-cta-btn' href="#green-strip">ORDER NOW</a>
            </div>
        </div>
    </div>
</header>

<style>
    header.page-header {
        background-color: #FFE746;
        box-shadow: 0 4px 4px rgb(0 0 0 / 25%);
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    }

    header.page-header .main-logo {
        padding: 15px 0 10px 0;
    }

    header.page-header .main-logo img {
        margin-top: unset !important;
    }

    header.page-header .main-logo  {
        display: inline-block;
        padding: 15px 0;
        max-width: 181px;
    }

    header.page-header .main-logo img {
        width: 150px;
    }

    header.page-header .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    header.page-header .buy-btn .main-btn {
        font-family: 'Poppins';
        font-weight: 600;
        font-size: 20px;
        color: #FFFFFF;
        border: 1px solid #000000 !important;
        background: #000000;
        box-shadow: 0px 5.01961px 12.549px rgb(0 0 0 / 15%);
        border-radius: 5.01961px;
        transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
        padding: 10px;
    }

    header.page-header .buy-btn .main-btn:hover {
        background-color: #000000;
    }

    header.page-header .buttons-container {
        display: flex;
        align-items: center;
    }

    header.page-header .off-container {
        display: flex;
        align-items: center;
    }

    header.page-header .up-to {
        width: 72px;
        font-family: 'PP Radio Grotesk';
        font-weight: 400;
        font-size: 25px;
        display: flex;
        align-items: center;
        color: #000000;
    }

    header.page-header .thirty-off {
        width: 202px;
        font-family: 'PP Radio Grotesk';
        font-weight: 700;
        font-size: 50px;
        display: flex;
        align-items: center;
        color: #000000;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    }

    @media screen and (max-width: 760px) {
        header { 
           padding: unset; 
        }

        header {
            top: 0;
            height: 15vw;
            width: 100%;
            z-index: 99;
            position: static;
        }

        header.sticky {
            position: fixed;
            top: 0;
        }

        header .off-container {
            flex-direction: column;
        }

        header .up-to {  
            font-family: 'PP Radio Grotesk';
            font-weight: 400;
            display: flex;
            align-items: center;
            color: #000000; 
            font-size: 4vw;
            line-height: 4vw;
        }

        header .thirty-off {
            font-family: 'PP Radio Grotesk';
            font-weight: 700;
            display: flex;
            align-items: center;
            color: #000000;
            text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            font-size: 7vw;
            line-height: 7vw;
        }
        header .buy-btn .main-btn {
            font-family: 'Poppins';
            font-weight: 600;
            color: #FFFFFF;
            border: 1px solid #000000 !important;
            background: #000000;
            filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.35));
            border-radius: 5px;
            transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
            font-size: 4vw;
            padding: 2vw;
            height: unset;
        }
    }
</style>

<script>
    var div_top = $('header').offset().top;

    $(window).scroll(function () {
        var window_top = $(window).scrollTop();
        let height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        if (window_top >= div_top) {
            if (!$('header').is('.sticky')) {
                $('header').addClass('sticky');
                $('#shopify-section-lps-featured-on-black-friday').css("padding-top", $('header').height() + "px");
            }
        } 
        else {
            $('header').removeClass('sticky');
            $('#shopify-section-lps-featured-on-black-friday').css("padding-top", 0);
        }
    });
</script>