<div id="countdown">
  <ul>
    <li><span class="hours"></span></li>
    <li><span class="minutes"></span></li>
    <li><span class="seconds"></span></li>
  </ul>
</div>


<style>
  #countdown {
    display: flex;
    color: #222222;
    justify-content: center;
  }

  #countdown li {
    display: inline-block;
    font-size: 15px;
    list-style-type: none;
    text-transform: uppercase;
    min-width: 80px;
    text-align: center;
    font-family: 'Poppins';
    position: relative;
  }

  #countdown li span {
    display: block;
    font-size: 60px;
    font-weight: 400;
    font-family: 'Ticking Timebomb';
    line-height: 0.7em;
  }

  #countdown li:not(:last-child):before {
    content: ":";
    display: block;
    font-size: 30px;
    position: absolute;
    top: -4px;
    left: 80px;
  }

  @media screen and (max-width: 760px) {
    #countdown {
      
    }

    #countdown li {
      padding: 5px;
      font-size: 12px;
      min-width: 15vw;
    }

    #countdown li span {
      font-size: 30px;
    }

    #countdown li:not(:last-child):before {
      left: 50px;
      font-size: 26px;
      top: -3px;
    }
  }
</style>

<script>
  // Timer
  Number.prototype.pad = function () {
    return this < 10 ? '0' + this : this;
  }

  const second = 1000,
    minute = second * 60,
    hour = minute * 60;

      let birthday = "November 23, 2022 09:59:00";
  let countDown = new Date(birthday).getTime();
  let x = setInterval(function () {
    var now = new Date().getTime();
    var distance = countDown - now;

    Array.from(document.getElementsByClassName("hours")).forEach(element => element.innerText = Math.floor(distance / (hour)).pad());
    Array.from(document.getElementsByClassName("minutes")).forEach(element => element.innerText = Math.floor((distance % (hour)) / (minute)).pad());
    Array.from(document.getElementsByClassName("seconds")).forEach(element => element.innerText = Math.floor((distance % (minute)) / second).pad());

    // do something later when date is reached
    if (distance < 0) {
      clearInterval(x);
    }
    //seconds
  }, 0)
</script>