
<section class="hero-banner">
  <div class="container">
    <div class="holidays-hero-banner-content">
      <div class="text-button">
        {% comment %} <div class="main-title">Long-Term Blood Sugar Support</div>
        <div class="subtitle">Keep On Supporting Your Blood Sugar with CuraLin</div>
        <a class="cta-btn" href="/collections/all-holidays2022">Order Now</a> {% endcomment %}

        <div class="main-title">{{ mainTitle }}</div>
        <div class="subtitle">{{ subTitle }}</div>
        <a class="cta-btn" href="/collections/all-holidays2022">{{ ctaTitle }}</a>
      </div>
      <img class="main-img" src="{{ 'mask-and-bottle.png' | asset_url }}" width="1039" height="528" alt="bottle-hand-mask" loading="lazy">
    </div>
  </div>
  <img class="main-img-mb" src="{{ 'mask-and-bottle-mb.png' | asset_url }}" width="750" height="1084" alt="bottle-hand-mask-mb" loading="lazy">
</section>

<style>
  .hero-banner {
    position: relative;
    overflow: hidden;
    background: #E8E8B0;
  }

  .hero-banner .main-img {
    position: relative;
    left: 50px;
  }

  .hero-button h1 {
    font-family: 'PP Radio Grotesk';
    color: var(--dark-green);
    margin: unset;
    line-height: 1em;
    font-weight: 700;
  }

  .cta-btn {
    font-weight: 100;
    background: var(--dark-green);
    text-align: center;
    border: 1px solid  var(--dark-green);
    border-radius: 4px;
    font-size: clamp(20px, 2vw, 18px);
    color: white;
    padding: 10px 30px;
    box-shadow: 0px 5px 12.5px rgba(0, 0, 0, 0.15);
    transition: unset;
    margin-bottom: 20px;
    width: 250px;
    margin-top: 40px;
  }

  .main-btn:hover {
    background: var(--green);
    border: var(--green);
  }

  .hero-banner .text-button .cta-btn:hover {
    background: var(--green);
    border: var(--green);
    color: white;
  }

  .hero-banner .container {
    height: 100%;
    position: relative;
    z-index: 1;
  }
</style>

<style>
  .holidays-hero-banner-content {
    display: flex;
    align-items: center;
    height: 100%;
  }

  .holidays-hero-banner-content .text-button {
    display: flex;
    flex-direction: column;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    min-width: 40%;
  }

  .holidays-hero-banner-content .text-button .main-title {
    color: var(--dark-green);
    font-size: {% if isLP %}clamp(30px, 2vw, 120px){% else %}clamp(50px, 12vw, 120px) {% endif %};
  }

  .holidays-hero-banner-content .text-button .subtitle {
    color: var(--dark-green);
    font-style: normal;
    font-weight: 300;
    font-size: clamp(26px, 2vw, 45px);
  }

  .hero-banner .main-img-mb {
    display: none;
  }

  .hero-banner .container .main-btn.mobile-btn {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .hero-banner {
      text-align: center;
    }

    .hero-banner .text-button .cta-btn {
      bottom: 0;
      left: 5%;
      position: absolute;
      width: 90%;
    }

    .holidays-hero-banner-content {
      justify-content: center;
    }

    .holidays-hero-banner-content .text-button .main-title {
      text-align: center;
    }

    .holidays-hero-banner-content .text-button .subtitle {
      text-align: center;
      max-width: unset;
    }

    .holidays-hero-banner-content .main-img {
      display: none;
    }

    .hero-banner .main-img-mb {
      display: block;
      width: 150%;
    }

    .holidays-hero-banner-content .text-button {
      margin-left: unset;
    }

    .hero-banner .container .main-btn.mobile-btn {
      display: block;
      margin-top: -30vw;
      text-transform: unset !important;
    }
  }
</style>