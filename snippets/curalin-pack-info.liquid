{% if product.tags contains "sleep" %}
  {% assign bg_color = "var(--light-turquoise)" %}
  {% assign number_color = "var(--dark-turquoise)" %}
  {% assign link_color = "var(--dark-turquoise)" %}
{% elsif product.tags contains "joint" %}
  {% assign bg_color = "var(--light-purple)" %}
  {% assign number_color = "var(--purple)" %}
  {% assign link_color = "var(--dark-purple)" %}
{% endif %}

<section class="curalin-info-section instance-{{ index }}">
  <div class="container">
    <div class="titles">
      <h2 class="title">{{ product.title }}</h2>
      <p class="subtitle">{{ product.description }}</p>
    </div>


    <div class="tabbed-content tabs-side">
      <nav class="tabs">
        <ul>
          <li><a href="#highlights-{{ index }}" class="active">Product Highlights <i>></i></a></li>
          <li><a href="#instructions-{{ index }}">Usage Instructions <i>></i></a></li>
          {% if product.metafields.custom.ingredients.value %}
            <li><a href="#ingredients-{{ index }}">Ingredients <i>></i></a></li>
          {% endif %}
          <li><a href="#facts-{{ index }}">Supplement Facts <i>></i></a></li>
        </ul>
      </nav>

      <div class="content">
        <div id="highlights-{{ index }}" class="item active always-active" data-title="Product Highlights">
          <div class="highlights item-content">
            {% for highlight in product.metafields.custom.product-highlights.value %}
              <div class="highlight">
                <div class="highlight-icon"><i class="icofont-check"></i></div>
                <p><b>{{ highlight.title }}</b><br>{{ highlight.subtitle }}</p>
              </div>
            {% endfor %}
          </div>
        </div>

        <div id="instructions-{{ index }}" class="item" data-title="Usage Instructions">
          <div class="instructions item-content">
            {% for step in product.metafields.custom.instructions.value %}
              <div class="step">
                <h3>{{ step.title }}</h3>

                <div class="capsules">
                  {% for item in (1..step.capsules) %}
                    {% if product.tags contains "gummies" %}
                      <img class="gummies" src="{{ "onboarding-gummy.png" | asset_url }}" width="20" height="31" alt="Capsule Pill" loading="lazy">
                    {% else %}
                      <img class="caps" src="{{ "onboarding-capsule.png" | asset_url }}" width="20" height="31" alt="Capsule Pill" loading="lazy" style="min-width: 35px">
                    {% endif %}
                  {% endfor %}
                </div>
                <p>{{ step.subtitle }} <br> {{ step.text }} <br> {{ step.text_2 }}</p>

              </div>
            {% endfor %}
          </div>
        </div>

        {% if product.metafields.custom.ingredients.value %}
          <div id="ingredients-{{ index }}" class="item" data-title="Ingredients">
            <div class="ingredients item-content">
              {% for ingredient in product.metafields.custom.ingredients.value %}
                <div class="ingredient">
                  {% assign ingredient_handle = ingredient | downcase | replace: ' ', '-'  %}
                  <img src="{{ "product-supplement-pack-info-ingredient-icon-" | append: ingredient_handle | append: ".png" | asset_url }}" alt="Ingredient" loading="lazy">
                  <p>{{ ingredient }}</p>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        <div id="facts-{{ index }}" class="item" data-title="Supplement Facts">
          <div class="facts item-content">
              <img src="{{ product.metafields.custom.supplement_fact | img_url: 'original' }}" alt="Supplement Facts" loading="lazy">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% if isLastRender %}
  <style>
    #supplement-page section.curalin-info-section .titles {
      flex-direction: revert;
      justify-content: start;
      max-width: 100%;
      text-align: left;
    }

    .curalin-info-section {
      background: var(--light-brown);
    }

    .curalin-info-section:nth-of-type(even) {
      background: {{ bg_color }};
    }

    .curalin-info-section .product-image-wrapper {
      position: absolute;
      bottom: -120px;
      right: 0;
      pointer-events: none;
    }

    .curalin-info-section:nth-of-type(even) .tabbed-content {
      margin-left: 30%;
    }

    .curalin-info-section:nth-of-type(even) .product-image-wrapper,
    .curalin-info-section:nth-of-type(even) .product-image-wrapper p{
      left: 0;
    }

    .curalin-info-section .product-image-wrapper .number {
      font-family: var(--main-font);
      position: absolute;
      right: 0;
      top: -80px;
      line-height: 1em;
      font-size: 350px;
      font-weight: bold;
      color: var(--dark-orange);
      margin: unset;
    }

    .curalin-info-section.curalin-info-section:nth-of-type(even) .product-image-wrapper .number {
      color: {{ number_color }};
    }

    .curalin-info-section .product-image-wrapper .product-image {
      position: relative;
      right: -10px;
    }

    .curalin-info-section .highlights {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .curalin-info-section .highlights .highlight {
      display: flex;
      align-items: center;
    }

    .curalin-info-section .highlights .highlight p {
      margin: unset;
    }

    .curalin-info-section .highlight-icon {
      background: var(--light-green);
      color: white;
      border-radius: 50%;
      min-width: 30px;
      height: 30px;
      font-size: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 20px;
    }

    .curalin-info-section .instructions {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .curalin-info-section .instructions .step {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
    }

    .curalin-info-section .instructions .step h3 {
      font-size: 28px;
      font-weight: bold;
      min-width: 105px;
    }

    .curalin-info-section .instructions .step .capsules {
      min-width: 80px;
    }

    .curalin-info-section .ingredients {
      display: flex;
      flex-wrap: wrap;
      max-width: 400px;
      gap: 10px;
    }

    .curalin-info-section .ingredient {
      width: 120px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .curalin-info-section .ingredient p {
      font-size: 16px;
      text-align: center;
    }

    .curalin-info-section .facts {
      text-align: center;
    }

    .curalin-info-section .facts img {
      max-height: 300px;
    }

    .curalin-info-section .tabbed-content {
      max-width: 800px;
      display: flex;
      align-items: center;
      height: 300px;
    }

    .curalin-info-section .tabs ul li {
      text-align: center;
      height: 70px;
      border-bottom: 1px solid;
    }

    .curalin-info-section .tabs ul li:first-child {
      border-top: 1px solid;
    }

    .curalin-info-section .tabs ul li a {
      height: 100%;
      align-items: center;
      display: flex;
      justify-content: center;
    }

    .curalin-info-section .tabs ul li a i {
      position: relative;
      transition: all 0.5s ease-in-out;
      font-style: normal;
      left: 20px;
    }

    .curalin-info-section .tabs ul li a:hover,
    .curalin-info-section .tabs ul li a.active {
      color: var(--brown);
      font-weight: bold;
    }

    .curalin-info-section:nth-of-type(even) .tabs ul li a:hover,
    .curalin-info-section:nth-of-type(even) .tabs ul li a.active {
      color: {{ link_color }};
    }

    .curalin-info-section .item {
      margin-bottom: 2px;
      position: relative;
    }

    .curalin-info-section .item::before {
      content: attr(data-title);
      border-top: 1px solid var(--light-green);
      cursor: pointer;
      font-weight: bold;
      padding: 0.5em;
      display: block;
      text-align: center;
    }

    .curalin-info-section .item.active .item-content {
      transition: opacity 0.8s ease-in-out;
    }

    .curalin-info-section .tabbed-content .tabs {
      display: none;
    }

    .tabbed-content .item {
      min-height: 2em;
    }

    .curalin-info-section .tabbed-content .item .item-content {
      opacity: 0;
      visibility: hidden;
      height: 0;
    }

    .curalin-info-section .tabbed-content .item.active .item-content {
      opacity: 1;
      visibility: visible;
      height: auto;
    }

    @media all and (min-width: 800px) {
      .item.active .item-content {
        padding-top: 0;
      }

      .curalin-info-section .tabbed-content .tabs {
        display: block;
      }

      .curalin-info-section .tabbed-content .tabs li {
        display: inline-block;
        margin-bottom: 2px;
      }

      .curalin-info-section .tabbed-content .tabs li a {
        display: flex;
      }

      .curalin-info-section .tabbed-content .item {
        min-height: 0;
      }

      .curalin-info-section .tabbed-content .item::before {
        display: none;
      }

      .curalin-info-section .tabbed-content.tabs-side .tabs {
        min-width: 300px;
        margin-right: 50px;
      }

      .curalin-info-section .tabbed-content.tabs-side .tabs li {
        display: block;
      }
    }

    @media all and (max-width: 768px) {
      .curalin-info-section {
        padding-bottom: 75vw;
      }

      .curalin-info-section .tabbed-content {
        display: block;
        margin-left: unset !important;
      }

      .curalin-info-section .item::after {
        content: "+";
        font-size: 30px;
        position: absolute;
        top: 0.2vw;
        right: 2vw;
        border: 2px solid var(--light-green);
        border-radius: 50%;
        width: 5vw;
        height: 5vw;
        font-size: 6vw;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--light-green);
      }

      .curalin-info-section .item.active::after {
        content: "-";
      }

      .curalin-info-section .product-image-wrapper {
        bottom: 0;
        width: 100%;
        position: relative;
        text-align: center;
        margin-top: 10vw;
      }

      .curalin-info-section .product-image-wrapper .product-image {
        right: unset;
        text-align: center;
      }

      .curalin-info-section .product-image-wrapper .number {
        top: -15vw;
        font-size: 70vw !important;
        right: 13vw;
      }

      .curalin-info-section .tabbed-content .item.active .item-content {
        padding: 5vw 0;
      }

      .curalin-info-section .ingredient {
        width: 27vw;
      }

      .curalin-info-section .instructions .step {
        gap: 2vw;
      }

      .curalin-info-section .instructions .step h3 {
        min-width: 20vw;
      }
    }
  </style>
{% endif %}

  <script>
    tabControl();

    var resizeTimer;
    $(window).on('resize', function(e) {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(function() {
        tabControl();
      }, 250);
    });

    function tabControl() {
      var tabs = $('.curalin-info-section.instance-{{ index }} .tabbed-content').find('.tabs');
      if(tabs.is(':visible')) {
        tabs.find('a').on('click', function(event) {
          event.preventDefault();
          var target = $(this).attr('href'),
              tabs = $(this).parents('.tabs'),
              buttons = tabs.find('a'),
              item = tabs.parents('.curalin-info-section.instance-{{ index }} .tabbed-content').find('.item');
          buttons.removeClass('active');
          item.removeClass('active');
          $(this).addClass('active');
          $(target).addClass('active');
        });
      } else {
        $('.item').on('click', function() {
          var container = $(this).parents('.tabbed-content'),
              currId = $(this).attr('id'),
              items = container.find('.item');
              console.log(items);
          container.find('.tabs a').removeClass('active');
          items.removeClass('active');
          $(this).addClass('active');
          container.find('.tabs a[href$="#'+ currId +'"]').addClass('active');
        });
      }
    }
  </script>
