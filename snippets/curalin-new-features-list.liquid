
<div class="container">
    
      <div class="featured-products-new">
        <div class="quote-slider">
          <div class="swiper">
            <div class="swiper-wrapper">
              {% for experience in experienses %}
              
              <div class="swiper-slide">
                <div class="quote-card">
                <div class="quote-info">
                  <div class="quote-author">
                    <h3>{{ experience | split: "*" | last }}</h3>
                  </div>
                  <div class="quote-rating">
                    <p>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                      <span class="icon-star"></span>
                    </p>
                  </div>
                </div>
                    <p class="quoted-text">{{ experience | split: "*" | first }}</p>
               
                
                </div>
              </div>
              {% endfor %}
            </div>
            <div class="slider-control">
              <div class="prev-slide2"><span class="icon-arrow"></span></div>
              <div class="next-slide2"><span class="icon-arrow"></span></div>
            </div>
          </div>
        </div>
      </div>
  </div> 
  
  <style>
  
  
  
    .mini-wrap {
     
    }
    .featured-products-new {
    
     
    }
    .quote-slider .swiper-slide.swiper-slide-active .quote-card  {
      top: 0;
      max-width: 60%;
      background: unset;
      box-shadow: unset;
    }
  
    .quote-card {
      background: unset;
    }
    .quote-slider .slider-control {
      justify-content: space-between;
    }
    .quote-card .quote-info .quote-rating p span {
     
      color: var(--light-green);
    }
  
    .quote-slider .prev-slide2 {
      background: unset;
    }
  
    .quote-slider .prev-slide2:hover {
      background: unset;
    }
  
  
    .quote-slider .next-slide2 {
      background: unset;
    }
  
    .quote-slider .next-slide2:hover {
      background: unset;
     
    }
  
    .quote-slider .prev-slide2 span {
      font-size: 22px;
      background: unset;
    }
  
    .quote-slider .next-slide2 span {
      font-size: 22px;
      background: unset;
    }
  
    .quoted-text {
      font-family: 'DM Sans';
      font-style: italic;
      font-weight: 400;
      font-size: 18px;
      line-height: 24px;
      color: #424733;
    }
  
    @media screen and (max-width: 768px) {
  
    .featured-products-new {
      width: 100%;
    }
  
      .mini-wrap {
        width: 100%;
      }
      .quote-slider .swiper-slide.swiper-slide-active .quote-card {
        max-width: 80%;
      }
  
      .quote-slider .slider-control {
         position: relative;
         top:-120px;
      }
  
     
    } 
  
  @media screen and (max-width: 629px) {
    .quoted-text {
      font-size: 3vw;
      line-height: unset;        
    }
  }
  
  </style>
  
  
   <script>
    quoteSlider = new Swiper(".quote-slider .swiper", {
      slidesPerView: 4,
      spaceBetween: 0,
      grabCursor: true,
      loop: true,
      navigation: {
        nextEl: ".next-slide2",
        prevEl: ".prev-slide2",
        disabledClass: 'disabled'
      },
      breakpoints: {
        0: {
          slidesPerView: 1
        },
        768: {
          slidesPerView: 1,
          centeredSlides: false
        },
        992: {
          slidesPerView: 4,
          centeredSlides: true
        }
      }
    });
  </script> 
  