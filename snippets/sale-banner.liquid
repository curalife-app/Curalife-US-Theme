{% unless instance_id %}
  {% assign instance_id = 'origin' %}
{% endunless %}
<div class="sale-banner {{ instance_id }}">
  {% render 'snow-effect' %}
  <div class="container">
    <div class="logo-wrapper">
        {% if logoFileName %}<img class="logo" src="{{ logoFileName | append: '.png' | asset_url }}" alt="logo">{% endif %}
    </div>

    <p class="title">{{ title }}</p>

    <div class="cta-wrapper">
      {% if ctaTitle == "20" %}
        <div class="off-container">
          <div class="up-to">UP TO</div>
          <div class="percents-off">20% OFF</div>
        </div>
      {% else %}
        <div class="off-container">
          <div class="percents-off">{{ ctaTitle }}</div>
        </div>
      {% endif %}

      <a class="main-btn" id='main-cta-btn' href="{{ ctaButtonLink }}">ORDER NOW</a>
    </div>
  </div>
</div>
<style>
  .sale-banner.{{ instance_id }} {
    background: {% if bgColor == "red" %}linear-gradient(#A9151E, #d50b15){% elsif bgColor == "green" %}linear-gradient(#4B643D, #4B643D){% else %}white{% endif %};

  }

  .sale-banner:first.{{ instance_id }} {
    {% if isFixed %}position: fixed;{% endif %}
  }

  .sale-banner.{{ instance_id }} img.logo {
    display: {% if desktopContent contains 'logo' %}block{% else %}none{% endif %};
    max-width:{% if longTitle %}93%{% else %}100%{% endif %};
  }

  .sale-banner.{{ instance_id }} p.title {
    display: {% if desktopContent contains 'title' %}block{% else %}none{% endif %};
    font-size:{% if longTitle %}clamp(32px, 3vw, 50px){% else %}clamp(38px, 4vw, 50px){% endif %};
    padding-bottom:{% if longTitle %}7px{% else %}20px{% endif %};
    left:{% if longTitle %}62%{% else %}50%{% endif %};
  }

  .sale-banner.{{ instance_id }} .off-container {
    display: {% if desktopContent contains 'cta' %}flex{% else %}none{% endif %};
  }

  .sale-banner.{{ instance_id }} .off-container {
    display: {% if desktopContent contains 'cta' %}flex{% else %}none{% endif %};
  }
  .sale-banner.{{ instance_id }} a.main-btn {
    display: {% if desktopContent contains 'cta-button' %}block{% else %}none{% endif %};
  }

  @media screen and (max-width: 768px) {
    {% if mobileContent contains ',' %}
      .sale-banner.{{ instance_id }} .container {
        gap: 3vw;
      }
    {% endif %}
    .sale-banner.{{ instance_id }} img.logo {
      display: {% if mobileContent contains 'logo' %}block{% else %}none{% endif %};
    }

    .sale-banner.{{ instance_id }} p.title {
      display: {% if mobileContent contains 'title' %}block{% else %}none{% endif %};
      font-size: {% if isLogo %}7{% else %}9{% endif %}vw;
      {% if isLogo %}max-width: 50%;{% endif %}
    }

    .sale-banner.{{ instance_id }} .cta-wrapper {
      {% if isCTA %}width: 100%;{% endif %}
    }

    .sale-banner.{{ instance_id }} .off-container {
        display: {% if mobileContent contains 'cta' %}flex{% else %}none{% endif %};
    }

    .sale-banner.{{ instance_id }} a.main-btn {
      display: {% if mobileContent contains 'cta-button' %}block{% else %}none{% endif %};
    }
  }
</style>

<style>


  .sale-banner {
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    overflow: hidden;
    width: 100%;
    z-index: 20;
    min-height: 80px;
  }

  .sale-banner .container {
    position: relative;
    min-height: 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sale-banner img.logo {
    object-fit: contain;
  }

  .sale-banner p.title {
    font-family: 'PP Radio Grotesk';
    color: #ffffff;
    padding: 10px 0;
    text-shadow: 2px 1px 4px #ffffff;
    margin: unset;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    width: max-content;
  }

  .sale-banner .cta-wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
  }

  .sale-banner .off-container {
      justify-content: center;
      align-items: center;
      font-family: 'PP Radio Grotesk';
      gap: 10px;
      color: white;
  }

  .sale-banner .up-to {
      font-size: 25px;
  }

  .sale-banner .percents-off {
      margin-right: 10px;
      font-size: 35px;
      font-weight: bold;
      text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  .sale-banner a.main-btn {
    font-size: 26px;
    padding: 10px 40px;
    color: #C00101;
    background: white;
    border-radius: 6px;
    box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.15);
  }

  @media screen and (max-width: 768px) {
   .sale-banner p.title {
      position: unset;
      transform: unset;
      padding-bottom: 10px;
    }

    .sale-banner .cta-wrapper {
      gap: 1vw;
    }

    .sale-banner .off-container {
        gap: unset;
    }

    .sale-banner .up-to {
        font-size: 4vw;
    }

    .sale-banner .percents-off {
        display:flex;
        justify-content: center;
        margin-right: unset;
        font-size: 6vw;
        line-height: 6vw;
    }

    .sale-banner a.main-btn {
      text-align:center;
      font-size: 4vw;
      padding: 3vw;
      height: 10vw;
      width:44vw;
    }
}
</style>

{% render 'sparkles', element_selector: '.sale-banner' %}