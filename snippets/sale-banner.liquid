{% render 'sparkles' %}

<div id="sale-banner">
  <div class="container">
    {% if isLogo %}
      {% if logoColor %}
        {% assign greenAddition = "-" | append: logoColor %}
      {% endif %}
      <img class="logo" src="{{ 'hs-santa-logo' | append: greenAddition | append: '.png' | asset_url }}" alt="logo">
    {% endif %}
    <p class="title">{{ title }}</p>

    {% if isCTA %}
      <div class="buttons-container">
        <div class="off-container">
          <div class="up-to">UP TO</div>
          <div class="thirty-off">30% OFF</div>
        </div>
        <div class="buy-btn">
          <a class="main-btn" id='main-cta-btn' href="#limited">ORDER NOW</a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  #sale-banner {
    background: {% if color == "red" %}linear-gradient(#A9151E, #d50b15){% elsif color == "green" %}linear-gradient(#4B643D, #4B643D){% else %}white{% endif %};
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    overflow: hidden;
    width: 100%;
    z-index: 10;
    min-height: 110px;
    {% if isFixed %}position: fixed;{% endif %}
  }

  #sale-banner .container {
    position: relative;
    min-height: 110px;
  }

  #sale-banner img.logo {
    position: absolute;
    left: 0;
    top: 25%;
  }

  #sale-banner p.title {
    display: flex;
    justify-content: center;
    font-family: 'PP Radio Grotesk';
    font-weight: 400;
    font-size: clamp(30px, 5vw, 70px);
    text-align: center;
    color: #ffffff;
    padding: 10px 0;
    text-shadow: 2px 1px 4px #ffffff;
    margin: unset;
    padding-bottom: 20px;
  }

  header .buttons-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
  }

  header .off-container {
      display: flex;
      align-items: center;
      font-family: 'PP Radio Grotesk';
      gap: 10px;
      margin-right: 10px;
  }

  header .up-to {
      font-size: 25px;
  }

  header .thirty-off {
      font-size: 35px;
      font-weight: bold;
      text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  @media screen and (max-width: 760px) {
    #sale-banner .title {
      padding: 2vw;
    }

    header .buttons-container {
        width: 100%;
    }

    header .off-container {
        flex-direction: column;
        gap: unset;
    }

    header .main-logo  {
        display: none;
    }

    header .up-to {
        font-size: 4vw;
    }

    header .thirty-off {
        font-size: 7vw;
        line-height: 7vw;
    }
    header .buy-btn .main-btn {
        font-size: 4vw;
        padding: 2vw;
    }
}
</style>

<script>
  $('#sale-banner').sparkle({
    size: 15,
    duration: 700,
    pause: 200
  });
  $('#sale-banner').sparkle({
    size: 20,
    duration: 1000,
    pause: 400
  });
  $('#sale-banner').sparkle({
    size: 30,
    duration: 1300,
    pause: 600
  });
  $('#sale-banner').sparkle({
    size: 40,
    duration: 1600,
    pause: 1000
  });
  $('#sale-banner').sparkle({
    size: 15,
    duration: 700,
    pause: 200
  });
  $('#sale-banner').sparkle({
    size: 20,
    duration: 1000,
    pause: 400
  });
  $('#sale-banner').sparkle({
    size: 30,
    duration: 1300,
    pause: 600
  });
  $('#sale-banner').sparkle({
    size: 40,
    duration: 1600,
    pause: 1000
  });
</script>