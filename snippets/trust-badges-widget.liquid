{% if shop.name == "CuraLife" %}
  {% assign shipping_worldwide = 'Free Shipping' %}
{% elsif shop.name == "CuraLife Global" %}
  {% assign shipping_worldwide = 'Free Shipping Above Â£99' %}
{% endif %}

<div id="trust-badges-widget">
  {% if content contains "free-shipping" %}
    <div class="trust-badge"><i class="icofont-vehicle-delivery-van" style="font-size:40px"></i>{{ shipping_worldwide }}</div>
  {% endif %}

  {% if content contains "money-back" %}
    <div class="trust-badge"><i class="icofont-badge" style="font-size:36px"></i>60 Day Money Back Guarantee</div>
  {% endif %}

  {% if content contains "secure-checkout" %}
    <div class="trust-badge"><i class="icofont-ui-lock"></i>100% Secure Checkout</div>
  {% endif %}
</div>

{% if bottomLine %}
  <div class="line">
    <div class="container" style="border-bottom: 1px solid {{ colors }}"></div>
  </div>
{% endif %}

<style>
  #trust-badges-widget {
    padding: 30px 0;
    display: flex;
    justify-content: center;
    gap: 50px;
    font-size: 18px;
  }

  #trust-badges-widget .trust-badge {
    display: flex;
    flex-direction: row;
    gap: 10px;
    text-align: center;
    align-items: center;
    text-transform: uppercase;
    max-width: {% if badgesPosition == "cta" %}33%{% else %}50%{% endif %};
  }

  #trust-badges-widget .trust-badge i {
    font-size: 30px;
    margin-right: 10px;
    width: 10vw;
    max-width: 40px;
    min-height: 40px;
  }

  @media screen and (max-width:768px) {
    #trust-badges-widget {
      gap: unset;
      justify-content: space-between;
    }

    #trust-badges-widget .container {
      border-bottom: unset;
      gap: unset;
      justify-content: space-between;
    }

    #trust-badges-widget .trust-badge {
      font-size: 3vw;
      flex-direction: column;
      padding-bottom: unset;
    }

    #trust-badges-widget .trust-badge i {
      width: 40px;
      margin-right: unset;
    }
  }
</style>