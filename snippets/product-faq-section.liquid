<section class="faq-section">
  <div class="container">
    <div class="titles">
        <h2>Popular Questions</h2>
    </div>

    <div class="faq">
      {% for faqItem in product.metafields.custom.faq.value %}
        <div class="faq-item">
          <h3 class="question">{{ faqItem.question }}</h3>
          <div class="answer"><p>{{ faqItem.answer }}</p></div>
          </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  {% if bgColor %}
    .faq-section {
      background-color: {{ bgColor }};
    }
  {% endif %}

  .swiper-button-prev,
  .swiper-button-next {
    color: gray;
    transition: opacity .5s
  }

  .faq-section .container h2 {
    text-align: start
  }

  .faq-section .container .faq {
    margin: 1rem auto
  }

  .faq-section .container .faq .faq-item {
    border-bottom: 1px solid #d3d3d3
  }

  .faq-section .container .faq .faq-item .question {
    padding: 1rem 3rem 1rem 0;
    line-height: 1.25rem;
    display: flex;
    align-items: center;
    position: relative;
    cursor: pointer;
    font-size: 18px
  }

  .faq-section .container .faq .faq-item .question::after {
    content: "+";
    font-size: 2rem;
    position: absolute;
    right: 1rem
  }

  .faq-section .container .faq .faq-item .question.active::after {
    content: "âˆ’"
  }

  .faq-section .container .faq .faq-item .answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height .2s ease-out
  }

  .faq-section .container .faq .faq-item .answer .answer-content {
    padding: 0 1rem 1rem;
    line-height: 1.5rem;
    font-weight: 300
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider {
    padding: 50px 0
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider .ingredients .ingredient {
    display: flex;
    align-items: center;
    max-width: 70%;
    margin: auto;
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider .ingredients .ingredient img {
    margin-left: -10%
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider .ingredients .ingredient .ingredient-content {
    margin-left: 50px
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider .ingredients .ingredient .ingredient-content .ingredient-title {
    font-size: 40px;
    font-size: 30px;
    font-weight: 500;
    margin-top: 20px;
    text-transform: uppercase
  }

  .faq-section .container .faq .faq-item .answer .ingredients-main-slider .ingredients .ingredient .ingredient-content .ingredient-description {
    font-size: 20px;
    font-weight: 300;
    line-height: 2rem
  }

  {% if titleVersion == "complex" %}
    .faq-section .titles {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .faq-section .titles .sub-title h2 {
      font-size: 1.9rem;
    }

    .faq-section .titles .sub-title p {
      font-size: 1.4rem;
    }

    @media screen and (max-width:768px) {
      .faq-section .titles {
        flex-direction: column;
      }
    }
  {% endif %}

  {% if titleVersion == "light" %}
    .faq-section .titles h2 {
      margin: 0;
      font-weight: bold;
    }

    @media screen and (max-width:768px) {
      .faq-section .titles h2 {
        margin-bottom: unset;
      }
    }
  {% endif %}
</style>

<style>
