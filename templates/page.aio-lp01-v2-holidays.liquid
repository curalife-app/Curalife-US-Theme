{% layout 'theme.aio-lp01' %}

<div class="page-overflow">
  {% render 'sale-banner', color: "green", isLogo: true, logoColor: "white", isFixed: true, isCTA: true %}
  {% render 'holidays-hero-banner' %}
  {% section 'lps-featured-on' %}
  {% section 'lps-video-reviews' %}
  {% section 'lps-instructions' %}
  {% section 'lps-satisfaction-survey' %}
  {% section 'lps-trusted-by-doctors' %}
  {% section 'lps-doctors-testimonials' %}
  {% section 'lps-clinically-tested' %}
  {% section 'lps-ingredients' %}
  {% section 'lps-supported-community' %}
  <div class="offer">Special Curalin Offer</div>
  {% render 'last-offer-title', isLP: true %}
  {% assign Prods = page.content | split: ',' %}
  {% render 'products-catalog-section', Prods: Prods, isSkipCart: true %}
  {% render 'trust-badges-section' %}
  {% render 'collection-curaeats-section-last-offer', challange_value: 99, curaeats_value: 29 %}
  {% section 'lps-return-policy' %}
  {% section 'lps-badges' %}
  {% section 'lps-faq' %}
  {% section 'lps-contact-us' %}
  {% section 'lps-sources' %}

  <div id="floating-cta">ORDER NOW</div>
</div>


<style>
  .offer {
    background-color: #C00101;
    color: #ffffff;
  }
  #shopify-section-lps-aio-lp01-hero-black-friday {
    padding-top: 110px;
  }

   .catalog  {
    margin-top: 20px;
      display: flex;
      text-align: center;
      font-size: clamp(28px, 4vw, 40px);
      font-weight: bold;
      flex-direction: column;
      gap: 10px;
  }

  .limited {
    font-size: clamp(25px, 3vw, 35px);
  }

  .changing-programm {
    text-align: center;
    font-size: clamp(16px, 2vw, 24px);

  }


  @media screen and (max-width:760px) {

  .changing-programm {
      padding: 0 1vw;
    }

  }
</style>

<style>
  .green-strip {
      top: 100px;
      width: 100%;
      background: #FFE746;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
      font-family: 'DM Sans';
      font-weight: 600;
      font-size: clamp(33px, 3vw, 60px); !important;
      line-height: 24px;
      text-align: center;
      letter-spacing: -0.02em;
      color: #222222;
      padding: 20px;
      margin-top: 30px;
  }

  .real-changes .sub-title {
    border-top: unset !important;
  }

  .featured-section {
    border-bottom: 1px solid #DCD9D9;
  }

  #floating-cta {
    position: fixed;
    right: 0;
    bottom: 0;
    cursor: pointer;
    width: 100%;
    height: 60px;
    background-color: #FFE746 !important;
    z-index: 10;
    display: none;
    color: #000000 !important;
    padding: 5px;
    font-weight: 600;
    font-size: 40px;
    text-align: center;
    display: none;
  }
</style>
