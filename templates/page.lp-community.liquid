{% layout 'theme.lps' %}

{% render 'lp-community-header' %}
{% render 'lp-community-hero' %}
{% render 'lp-community-statistics' %}
{% render 'lp-community-people' %}
{% render 'lp-community-food' %}
{% render 'lp-community-advice' %}
{% render 'lp-community-topics' %}
{% render 'lp-community-articles' %}
{% render 'lp-community-mealplans' %}
{% render 'lp-community-infographic' %}
{% render 'lp-community-moderators' %}
{% render 'lp-community-education' %}

<script src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js" type="text/javascript"></script>
<script type="text/javascript">
    KlaviyoSubscribe.attachToForms("#infographic_signup", {
      hide_form_on_success: true,
        extra_properties: {
            "Lead Source": "Community LP"
        }
    });
    KlaviyoSubscribe.attachToForms("#mealplans_signup", {
        extra_properties: {
            "Lead Source": "Community LP"
        }
    });
    KlaviyoSubscribe.attachToForms("#newsletter_signup", {
        extra_properties: {
            "Subscribe To": "Community LP"
        }
    });
</script>

<style>
  body {
    padding-top: unset;
  }

  .container {
    position: relative;
  }

  main section {
    padding-bottom: 50px;
    text-align: center;
    position: relative;
  }

  main section:nth-of-type(even) {
    background-color: #FBFBFB;
  }

  main section:nth-of-type(odd) {
    background-color: #F2F3F5;
  }

  h2 {
    text-align: center;
    font-weight: 500;
    font-size: 48px;
    line-height: 65px;
  }

  p {
    font-size: 24px;
    font-weight: 300;
    line-height: 35px;
    text-align: start;
  }

  form.sign-form {
    display: flex;
    flex-direction: column;
    width: 400px;
  }

  button {
    background: #FFC700;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    border: 0;
    border-radius: 6px;
    color: white;
    font-size: 45px;
    padding: 15px 30px;
    margin-top: 50px;
  }

  form button {
    margin-top: 20px;
    font-size: 28px;
    font-weight: normal;
  }

  input {
    border: 1px solid grey;
    border-radius: 6px;
    font-size: 23px;
    text-align: center;
    padding: 15px 30px;
    margin-top: 20px;
  }

  input::placeholder {
    opacity: 0.3;
  }

  .swiper-nav {
    background-color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    box-shadow: 4px 4px 10px rgb(0 0 0 / 25%);
    color: black;
  }

  .swiper-nav::after {
    font-size: 30px;
    font-weight: bold;
  }

  .swiper-nav.disabled {
    display: none;
  } 

  @media screen and (max-width: 991px) {
    .container {
      padding: 0 20px;
    }

    h2 {
      text-align: start;
      font-size: 5.8vw;
      line-height: 7vw;
    }

    p {
      font-size: 5vw;
      line-height: 7vw;
    }

    button {
      font-size: 7vw;
    }

    form button {
      font-size: 6vw;
    }

    img.section-badge {
      width: 30vw;
    }

    form.sign-form {
      width: 100%;
    }
  }
</style>
