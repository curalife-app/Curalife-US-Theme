<style>
  .green-strip {
      top: 100px;
      width: 100%;
      background: #FFE746;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
      font-family: 'DM Sans';
      font-weight: 600;
      font-size: clamp(33px, 3vw, 60px); !important;
      line-height: 24px;
      text-align: center;
      letter-spacing: -0.02em;
      color: #222222;
      padding: 20px;
      margin-top: 30px;
  }

  .real-changes .sub-title {
    border-top: unset !important;
  }

  .featured-section {
    border-bottom: 1px solid #DCD9D9;
  }

  #floating-cta {
    position: fixed;
    right: 0;
    bottom: 0;
    cursor: pointer;
    width: 100%;
    height: 60px;
    background-color: #FFE746 !important;
    z-index: 10;
    display: none;
    color: #000000 !important;
    padding: 5px;
    font-weight: 600;
    font-size: 40px;
    text-align: center;
    display: none;
  }
</style>

<script>
  $("#floating-cta").click(function () {
    $([document.documentElement, document.body]).animate({
      scrollTop: $("#product-catalog-section").offset().top + 130
    }, 2000);
  });

  if ($(window).width() < 761) {
    $(window).scroll(function () {
      if ($(this).scrollTop() > 800 && $(this).scrollTop() < ($("#product-catalog-section").offset().top - 1000)) {
        $('#floating-cta').fadeIn();
      } else {
        $('#floating-cta').fadeOut();
      }
    });
  }
</script>