{% layout 'theme.aio-lp01' %}

<div class="page-overflow">
    <!-- {% section 'lps-aio-lp01-header' %} -->
    {% section 'homepage-banner' %}
    {% render 'mini-banner-lp-v2' %}
    {% section 'lps-featured-on' %}
    {% section 'lps-video-reviews' %}
    {% section 'lps-instructions' %}
    {% section 'lps-satisfaction-survey' %}
    {% section 'lps-trusted-by-doctors' %}
    {% section 'lps-doctors-testimonials' %}
    {% section 'lps-clinically-tested' %}
    {% section 'lps-ingredients' %}
    {% section 'lps-supported-community' %}
    {% section 'lps-products-catalog' %}
    {% section 'lps-return-policy' %}
    {% section 'lps-badges' %}
    {% section 'lps-faq' %}
    {% section 'lps-contact-us' %}
    {% section 'lps-sources' %}
    
    <div id="floating-cta">ORDER NOW</div>
</div>

<style>
    .homepage-banner-easter {
        margin-top: 80px;
        overflow: hidden;
        padding: 30px 0;
    }

    .homepage-banner-easter .free-shipping {
        display: block !important;
    }

    .homepage-banner-easter .container {
        padding-bottom: 30px;
    }

    .main-title {
        display: none;
    }

    .main-title-alternative {
        display: block !important;
    }

    .real-changes .sub-title {
        border-top: unset !important;
    }

    .featured-section {
        border-bottom: 1px solid #DCD9D9;
    }

    #floating-cta {
    position:fixed;
    right:0;
    bottom:0;
    cursor:pointer;
    width:100%;
    height:60px;
    background-color:#C78263;
    z-index: 10;
    display:none;
    color: white;
    padding: 5px;
    font-weight: 600;
    font-size: 40px;
    text-align: center;
}

@media screen and (max-width:760px) {
    .homepage-banner-easter {
        margin-top: 0;
    }

    .homepage-banner-easter .free-shipping {
            display: none !important;
        }

    .homepage-banner-easter .main-logo {
        display: block !important;
    }

    .homepage-banner-easter .main-title-alternative p {
        margin-bottom: 20vw;
    }

    .cta-wrapper {
        display: none;
    }    

    .homepage-banner-easter .bg .bg-egg:nth-child(1) {
        top: 108px;
        left: -62px;
    }

    .homepage-banner-easter .bg .bg-egg:nth-child(2) {
        right: -24px;
        top: -19px;
    }

    .homepage-banner-easter .bg .bg-egg:nth-child(3) {
        display: none;
    }
}
</style>

<script>
    $("#floating-cta").click(function() {
    $([document.documentElement, document.body]).animate({
        scrollTop: $("#product-section").offset().top + 130
    }, 2000);
});

if ($(window).width() < 761) {
    $(window).scroll(function(){ 
            if ($(this).scrollTop() > 800 && $(this).scrollTop() < ($("#product-section").offset().top - 1000)) { 
                $('#floating-cta').fadeIn(); 
            } else { 
                $('#floating-cta').fadeOut(); 
            } 
        });
}
</script>
