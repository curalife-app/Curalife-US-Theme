<div id="recipe-page">
  <div class="carbs-level-bar">
    <div class="container">
      <div class="level-icon"></div>
      <p>{{ article.metafields.recipe.carbs_level.value }} Carbs</p>
    </div>
  </div>

  <div class="recipe">
    <div class="container">
      <div class="info">
        <h1>{{ article.title }}</h1>
        <div class="subtitles">
          <p class="calories"><i></i>{{ article.metafields.recipe.calories }}kcal</p>
          <p class="cooking-duration"><i class="icofont-clock-time"></i>{{ article.metafields.recipe.cooking_duration }}</p>
        </div>

        <div class="nutrients">
          <p class="fat"><i class="icofont-cheese"></i>Fat | {{ article.metafields.recipe.fat }}</p>
          <p class="carbs"><i class="icofont-wheat"></i>Carbs | {{ article.metafields.recipe.carbs }}</p>
          <p class="protein"><i class="icofont-chicken-fry"></i>Protein | {{ article.metafields.recipe.protein }}</p>
          <p class="fiber"><i class="icofont-fruits"></i></i>Fiber | {{ article.metafields.recipe.fiber }}</p>
        </div>
      </div>

      <div class="description">
        <div class="ingredients">
          <h2>Ingredients</h2>
          <ul>
            {% for ingredient in article.metafields.recipe.ingredients.value %}
              <li>{{ ingredient }}</li>
            {% endfor %}
          </ul>
        </div>

        <div class="instructions">
          <h2>instructions</h2>
          <ul>
            {% for instruction in article.metafields.recipe.instructions.value %}
              <li>{{ instruction }}</li>
            {% endfor %}
          </ul>
        </div>

        <div class="tip-wrapper">
          <h2><i class="icofont-bulb-alt"></i>Tip</h2>
          <p>{{ article.metafields.recipe.tip }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #recipe-page {
    font-size: 22px;
  }

  #recipe-page h2 {
    color: var(--peach);
    margin-bottom: 10px;
  }

  #recipe-page p {
    margin: unset
  }

  #recipe-page .carbs-level-bar {
    background-color: var(--light-peach);
    color: var(--dark-peach)
  }

  #recipe-page .carbs-level-bar .container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 10px 0;
    font-weight: bold;
  }

  #recipe-page .carbs-level-bar p {
    margin: 0;
    font-weight: bold;
  }


  #recipe-page .info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 30px 0;
  }

  #recipe-page .info h1 {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
  }

  #recipe-page .info .subtitles {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    font-weight: bold;
    color: var(--dark-green);
  }

  #recipe-page .info .nutrients {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    color: var(--dark-green);
  }

  #recipe-page .info .nutrients i {
    color: var(--peach)
  }

  #recipe-page .description {
    display: grid;
    gap: 50px;
  }

  #recipe-page .ingredients {
    grid-column: 1/2;
  }

  #recipe-page .ingredients ul {
    list-style: disc;
  }

  #recipe-page .instructions {
    grid-column: 1/3;
    grid-row: 2/3;
  }

  #recipe-page .instructions ul {
    list-style: none;
    counter-reset: instructions-counter;
  }

  #recipe-page .instructions ul li {
    counter-increment: instructions-counter;
    margin-bottom: 20px;
  }

  #recipe-page .instructions ul li::before {
    content: counter(instructions-counter) "";
    color: white;
    background: var(--peach);
    padding: 5px;
    font-weight: bold;
    border-radius: 50%;
    max-width: 10px;
    max-height: 10px;
  }

  #recipe-page .tip-wrapper {
    grid-column: 2/3;
    width: 400px;
    justify-self: right;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 10px;
    border: 2px solid var(--peach);
    padding: 20px;
  }
</style>