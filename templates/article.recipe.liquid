{% if article.metafields.recipe.carbs_level == "High" %}
  {% assign carbs_bar_bg_color = 'var(--light-peach)' %}
  {% assign carbs_bar_text_color = 'var(--dark-peach)' %}
{% elsif article.metafields.recipe.carbs_level == "Mid" %}
  {% assign carbs_bar_bg_color = 'var(--light-brown)' %}
  {% assign carbs_bar_text_color = 'var(--brown)' %}
{% elsif article.metafields.recipe.carbs_level == "Low" %}
  {% assign carbs_bar_bg_color = 'var(--lighter-green)' %}
  {% assign carbs_bar_text_color = 'var(--dark-green)' %}
{% endif %}

  <div id="recipe-page">
    <div class="carbs-level-bar">
      <div class="container">
        <div class="level-icon {{ article.metafields.recipe.carbs_level | downcase }}"><div class="rec"></div><div class="rec"></div><div class="rec"></div></div>
        <p>{{ article.metafields.recipe.carbs_level }} Carbs</p>

        <i class="icofont-printer" onclick="printRecipe(this)" style="cursor:pointer;position:absolute;right:0;top:5px;font-size:28px;color:{{ carbs_bar_text_color }}"></i>
      </div>
    </div>

    <div id="recipe" class="recipe">
      <div class="container">
        <div class="info">
          <h1>{{ article.title }}</h1>
          <div class="subtitles">
            <p class="calories"><i class="icofont-fire-burn"></i>{{ article.metafields.recipe.calories }}kcal</p>
            <p class="cooking-duration"><i class="icofont-clock-time"></i>{{ article.metafields.recipe.duration }}</p>
          </div>

          <div class="nutrients">
            <p class="fat"><i class="icofont-cheese"></i>Fat | {{ article.metafields.recipe.fat }}</p>
            <p class="carbs"><i class="icofont-wheat"></i>Carbs | {{ article.metafields.recipe.carbs }}</p>
            <p class="protein"><i class="icofont-chicken-fry"></i>Protein | {{ article.metafields.recipe.protein }}</p>
            <p class="fiber"><i class="icofont-pear"></i>Fiber | {{ article.metafields.recipe.fiber }}</p>
          </div>
        </div>

        <div class="line"></div>

        <div class="description">
          <div class="ingredients">
            <h2>Ingredients</h2>
            <ul>
              {% for ingredient in article.metafields.recipe.ingredients.value %}
                <li>{{ ingredient }}</li>
              {% endfor %}
            </ul>
          </div>

          <div class="instructions">
            <h2>Instructions</h2>
            <ul>
              {% for instruction in article.metafields.recipe.instructions.value %}
                <li>{{ instruction }}</li>
              {% endfor %}
            </ul>
          </div>

          {% if article.metafields.recipe.tip %}
            <div class="tip-wrapper">
              <h2><i class="icofont-bulb-alt"></i>Tip</h2>
              <p>{{ article.metafields.recipe.tip }}</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <style>
    .line {
      width: 300px;
      border-bottom: 2px solid var(--peach);
      margin: 50px auto;
    }

    .level-icon {
      display: flex;
      align-items: baseline;
      gap: 1px;
    }

    .level-icon .rec {
      height: 10px;
      width: 7px;
      background: {{ carbs_bar_text_color }};
      border-radius: 3px;
    }

    .level-icon.high .rec:first-child {
      height: 5px;
    }

    .level-icon.low .rec:first-child {
      height: 15px;
    }

    .level-icon.high .rec:last-child {
      height: 15px;
    }

    .level-icon.low .rec:last-child {
      height: 5px;
    }

    #recipe-page {
      font-size: 22px;
    }

    #recipe-page h2 {
      color: var(--peach);
      margin-bottom: 10px;
      font-size: 32px;
    }

    #recipe-page p {
      margin: unset;
    }

    #recipe-page .carbs-level-bar {
      background-color: {{ carbs_bar_bg_color }};
      color: {{ carbs_bar_text_color }};
    }

    #recipe-page .carbs-level-bar .container {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 5px 0;
      font-weight: bold;
    }

    #recipe-page .carbs-level-bar p {
      margin: 0;
      font-weight: bold;
    }


    #recipe-page .info {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding-top: 30px;
    }

    #recipe-page .info h1 {
      font-size: 40px;
      font-weight: bold;
      margin-bottom: 20px;
      text-align: center;
    }

    #recipe-page .info .subtitles {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
      font-weight: bold;
      color: var(--dark-green);
    }

    #recipe-page .info .nutrients {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
      color: var(--dark-green);
    }

    #recipe-page .info i {
      color: var(--peach);
      margin-right: 10px;
      font-size: 30px;
    }

    #recipe-page .description {
      display: grid;
      gap: 50px;
    }

    #recipe-page .ingredients {
      grid-column: 1/2;
    }

    #recipe-page .ingredients ul {
      list-style: disc;
    }

    #recipe-page .instructions {
      grid-column: 1/3;
      grid-row: 2/3;
    }

    #recipe-page .instructions ul {
      list-style: none;
      counter-reset: instructions-counter;
    }

    #recipe-page .instructions ul li {
      counter-increment: instructions-counter;
      margin-bottom: 20px;
      line-height: 1.8em;
    }

    #recipe-page .instructions ul li::before {
      content: counter(instructions-counter) "";
      color: white;
      background: var(--peach);
      padding: 5px 13px;
      font-weight: bold;
      border-radius: 50%;
      max-width: 10px;
      max-height: 10px;
      margin-right: 30px;
      line-height: 1.8em;
    }

    #recipe-page .tip-wrapper {
      grid-column: 2/3;
      width: 400px;
      justify-self: right;
      text-align: center;
      display: flex;
      flex-direction: column;
      gap: 10px;
      border: 2px solid var(--peach);
      padding: 20px;
      max-width: 100%;
    }

    @media screen and (max-width: 768px) {
      #recipe-page h1 {
        font-size: 10vw;
        margin-bottom: usnet;
      }

      #recipe-page h2 {
        font-size: 7vw;
      }

      #recipe-page .info .subtitles {
        font-size: 4vw;
        flex-direction: column-reverse;
      }

      #recipe-page .info .nutrients {
        font-size: 5vw;
        flex-wrap: wrap;
      }

      #recipe-page .description {
        display: flex;
        flex-direction: column;
        padding: 15px;
        gap: 10vw;
      }

      #recipe-page .instructions ul li::before {
        margin-right: 4vw;
      }
    }
  </style>

  <script>
    function printRecipe() {
      $("#recipe").printElement();
    }
  </script>

