  {% render 'product-benefits-section' %}
  {% render 'curalin-pack-info', product: product %}
  {% render 'curalin-supplement-info-section' %}
  {% render 'curalin-ingredients-section', product: product %}
  {% render 'curalin-pack-new-results' %}
  {% render 'aio-first-page-trusted-doctors', doctors: doctors, noDescription: true %}
  {% render 'product-schedule-a-call-section', productTitle: "Curalin", bgColor: '#FAF5E9', border: false, isHideImageOnMobile: true %}
  {% render 'product-faq-section', bgColor: "var(--lighter-green)" %}
  {% render 'product-back-to-top-button', isThirtyDay: true, ctaTitle: "SHOP NOW", textColor: 'white' %}
</div>

