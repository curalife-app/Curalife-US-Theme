{% layout 'theme.aio-lp01' %}

<div class="page-overflow">
    {% section 'lps-aio-lp01-header' %}
    {% section 'lps-aio-lp01-hero' %}
    {% section 'lps-featured-on' %}
    {% section 'lps-video-reviews' %}
    {% section 'lps-instructions' %}
    {% section 'lps-satisfaction-survey' %}
    {% section 'lps-trusted-by-doctors' %}
    {% section 'lps-doctors-testimonials' %}
    {% section 'lps-clinically-tested' %}
    {% section 'lps-ingredients' %}
    {% section 'lps-supported-community' %}
    {% section 'lps-products-catalog' %}
    {% section 'lps-return-policy' %}
    {% section 'lps-badges' %}
    {% section 'lps-faq' %}
    {% section 'lps-contact-us' %}
    {% section 'lps-sources' %}
    
    <div id="floating-cta">ORDER NOW</div>
</div>

<style>
    .real-changes .sub-title {
        border-top: unset !important;
    }

    .featured-section {
        border-bottom: 1px solid #DCD9D9;
    }

    #floating-cta {
    position:fixed;
    right:0;
    bottom:0;
    cursor:pointer;
    width:100%;
    height:60px;
    background-color:#C78263;
    z-index: 10;
    display:none;
    color: white;
    padding: 5px;
    font-weight: 600;
    font-size: 40px;
    text-align: center;
}
</style>

<script>
    jQuery("#floating-cta").click(function() {
    jQuery([document.documentElement, document.body]).animate({
        scrollTop: jQuery("#product-section").offset().top + 130
    }, 2000);
});

if (jQuery(window).width() < 761) {
    jQuery(window).scroll(function(){ 
            if (jQuery(this).scrollTop() > 800 && jQuery(this).scrollTop() < (jQuery("#product-section").offset().top - 1000)) { 
                jQuery('#floating-cta').fadeIn(); 
            } else { 
                jQuery('#floating-cta').fadeOut(); 
            } 
        });
}
</script>
