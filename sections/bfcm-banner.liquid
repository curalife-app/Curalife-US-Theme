{% style %}

.banner-background {
    object-fit: cover;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 10;
}

.title-black-friday {
    max-width: 50%;
    width: inherit;
    height: 100px;
    object-fit: cover;
    margin-left: -160px;
}

.title-sale {
    margin-left: -9%;
    z-index: 20;
    max-width: 30%;
    height: 50%;
    margin-top: -15px;    
}

.intro-wrap {
    padding: 0 !important;
}

.cstm_page.page-intro.with-bg {
    background-color: black;
}

.cstm_page.page-intro.with-bg .cstm_introwrp.intro-wrap .data-wrap {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.cstm_page.page-intro.with-bg .intro-wrap .data-wrap .intro-text {
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -20px;
}

.cstm_page.page-intro {
    background-color: #F0F1F4;
    position: relative;
    z-index: 1;
    overflow: hidden;
}

.cstm_container.container {
    width: 100%;
    max-width: 1460px;
    margin: 0 auto;
    padding: 0 10px;
    z-index: 40;
    position: relative;
}

.cstm_miniwrp.mini-wrap {
    width: 100%;
    max-width: 1230px;
    margin: 0 auto;
    padding: 0 15px;
}

.cstm_page.page-intro .cstm_introwrp.intro-wrap .data-wrap {
    width: 50%;
    display: flex;
}

.intro-wrap {
    max-height: 210px !important;
}

#countdown {
	position: relative;
	top: -65px;
    color: white;
}

#countdown li {
  display: inline-block;
  font-size: 15px;
  list-style-type: none;
  text-transform: uppercase;
  min-width: 110px;
}

#countdown li span {
  display: block;
  font-size: 60px;
  font-weight: 400;
}

#countdown li:not(:last-child):before {
	content: ":";
    display: block;
    font-size: 33px;
    position: relative;
    top: 50px;
    left: 80px;
}

@media screen and (max-width: 760px) {
    .title-black-friday {
        max-width: unset;
        width: 120%;
        margin-left: unset;
    }

    .title-sale {
        margin-left: 0;
        margin-top: -30px;
        margin-bottom: 15px;        
        max-width: 40%;
        height: unset;
    }

    .intro-text {
        flex-direction: column;
    }

    .cstm_page.page-intro .intro-wrap {
        position: unset;
        padding-top: 10px;
    }

    .cstm_page.page-intro .intro-wrap .data-wrap {
        width: 100% !important;
        padding-bottom: 0 !important;
        z-index: 2 !important;
        position: unset;
    }

    #countdown {
        width: 100%;
        text-align: center;
        top: -45px;        
    }
    
    #countdown li {
      padding: 5px;
      font-size: 16px;
        min-width: 70px;
    }
    
    #countdown li span {
        font-size: 45px;
    }
    
    #countdown li:not(:last-child):before {
        top: 40px;
        left: 40px;
    }
    
}

{% endstyle %}

{% javascript %}

Number.prototype.pad = function() {
    return this < 10 ? '0' + this : this;
}

// Timer
	
const second = 1000,
minute = second * 60,
hour = minute * 60;

let birthday = "December 3, 2021 09:59:00";
let countDown = new Date(birthday).getTime();
let x = setInterval(function() {    
    var now = new Date().getTime();
    var distance = countDown - now;

    document.getElementById("hours").innerText = Math.floor(distance / (hour)).pad(),
    document.getElementById("minutes").innerText = Math.floor((distance % (hour)) / (minute)).pad(),
    document.getElementById("seconds").innerText = Math.floor((distance % (minute)) / second).pad();
 
    // do something later when date is reached
    if (distance < 0) {
        clearInterval(x);
    }
//seconds
}, 0)

{% endjavascript %}