        display: none;
    }

    .cta-wrapper a {
        text-align: center;
    }

    .cta-wrapper button {
        background-color: #33B7A6;
        color: white;
        font-size: 40px;
        font-weight: 200;
        border: 0;
        border-radius: 5px;
        padding: 5px 65px;
        margin: 15px 0;
    }

    @media screen and (max-width:760px) {
        .curalin-banner-easter .content .main-title-wrapper {
            text-align: center;
            padding-top: 10px;
            grid-column: 1/1;
        }

        .curalin-banner-easter .content .main-title-wrapper h1 {
            font-size: 15vw;
        }

        .curalin-banner-easter .content .main-title-wrapper p {
            font-size: 7vw;
            margin-top: 0;
        }

        .curalin-banner-easter .eggs .egg:nth-child(1) {
            top: -30vw;
            left: -20px;
            transform: rotate(35deg);
        }

        .curalin-banner-easter .eggs .egg:nth-child(2) {
            top: -30vw;
            right: -20px;
            transform: rotate(-35deg);
        }

        .curalin-banner-easter .eggs .egg:nth-child(3) {
            top: -70vw;
            right: -20px;
            transform: rotate(-35deg);
        }

        .curalin-banner-easter .eggs .egg:nth-child(4) {
