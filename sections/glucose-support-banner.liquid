<div class="curalin-page-header">
    <img class="header-img" src="{{section.settings.header_image | img_url:'master' }}" alt="CuraLin Header Image">
    <div class="header-content">
        <h1>
            <b>{{section.settings.header_title}}</b><br>
            <span class="header-subtitle">{{section.settings.header_subtitle}}</span>
        </h1>
        <div class="btn">
            <a href="{{section.settings.button_link}}" class="main-btn">{{section.settings.button_title}}</a>
        </div>
    </div>
</div>

{% schema %}

{
    "name": "Glucose Support Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "header_image",
            "label": "Header Image"
        }, {
            "type": "text",
            "id": "header_title",
            "label": "Title",
            "default": "Enter Title"
        }, {
            "type": "text",
            "id": "header_subtitle",
            "label": "Sub-Title",
            "default": "Enter Sub-Title"
        }, {
            "type": "text",
            "id": "button_title",
            "label": "Button Title",
            "default": "Enter Button Title"
        }, {
            "id": "button_link",
            "type": "url",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "Glucose Support Banner",
            "category": "image"
        }
    ]
}

{% endschema %}

{% style %}

.curalin-page-header {
    display: flex;
    align-items: center;
}

.header-img {
    width: 50%;
    position: relative;
}

.header-content {
    margin-left: 100px;
    margin-top: -100px;
}

h1 {
    font-size: 40px;
}

.header-subtitle {
    font-weight: normal;
    font-size: 30px;
    margin-top: 20px;
}

@media screen and (max-width: 760px) {
    .curalin-page-header {
        flex-wrap: wrap;
    }

    .header-img {
        width: 100%;
    }

    .header-content {
        text-align: center;
        margin: auto;
    }
  }

{% endstyle %}

