        background-color: white;
    }

    .curalin-banner-easter {
        background-color: #FDD775;
    }

    .curalin-banner-easter .container {
        position: relative;
        z-index: 1;
    }

    .curalin-banner-easter .bg .bg-egg {
        position: absolute;
        z-index: -1;
    }

    .curalin-banner-easter .bg .bg-egg:nth-child(1) {
