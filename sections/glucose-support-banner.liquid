        top: 30px;
        transform: rotate(-75deg);
        width: 80px;
        animation-delay: 1s;
    }

    .curalin-banner-easter .bg .bg-egg:nth-child(3) {
        right: 36vw;
        bottom: 75px;
        transform: rotate(55deg);
        width: 120px;
        animation-delay: 1.5s;
    }

    .curalin-banner-easter .bg .bg-egg:nth-child(4) {
        left: -100px;
        bottom: -65px;
        transform: rotate(55deg);
        width: 250px;
        animation-delay: 2s;
    }

    .curalin-banner-easter .bg .bg-egg:nth-child(5) {
