<div class="catalog-page">
    <div class="container">
        <div class="mini-wrap">
        <h1>Choose Your CuraLin Bundle</h1>
            <div class="product-list">  
                {% for product in collection.products  -%}
                <div class="product-card">
                    <div class="wrap">
                        <div class="picture">
                            {% if section.settings.prdct_bgimg != blank %}
                            <div class="bg">
                                <img src="{{section.settings.prdct_bgimg | img_url: ''}}" alt="">
                            </div>
                            {% endif %}
                           
                            {% if product.featured_image.src != blank %}
                            <a href="{{ product.url }}">
                            <div class="img">
                                <img src="{{ product.featured_image.src | img_url: '300x300' }}" alt="">
                            </div>
                            </a>
                            {% endif %}
                          <div class="discount">
                      
                                {% if product.compare_at_price_max > product.price %}
                        <p>
                            {{ product.compare_at_price_max | minus: product.price | times: 100.0 | divided_by: product.compare_at_price_max | money_without_currency | times: 100 | remove: '.0'}}% discount
                            
                        </p>
                        {% endif %}
                            </div>
                        </div> 
                        <div class="info"> 
                            <div class="main">
                                <div class="name">
                                    <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
                                </div>
                                <div class="price">
                                    {% assign quantity = product.metafields.my_fields.pack_items_quantity %}
                                    {% assign original_price = product.metafields.my_fields.original_item.price %}
                                    {% if quantity > 1 %}
                                    {% assign item_price = product.price | divided_by: quantity %}
                                    <p>{{ item_price | floor | money }}<strike>{{ original_price | money }}</strike></p>
                                    {% elsif product.compare_at_price > product.price %}
                                    <p>{{ product.price | money }}<strike>{{ product.compare_at_price | money }}</strike></p>
                                    {% else %}
                                    <p>{{ product.price | money }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            {% comment %}
                             <form method="post" action="/cart/add">
                                <input type="hidden" name="id" value="{{ product.variants.first.id }}" />

                                <div class="btn">
                                    <button type="submit" class="main-btn"><i class="icon-cart"></i>Add to Cart
                                    </button>

                                   
                                </div>
                            </form>
                             {% endcomment %}
                             <form method="post" action="/cart/add">
                                <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                                <input type="hidden" name="return_to" value="/cart/">
                                

                                <div class="btn">
                                    <button type="submit" class="main-btn"><i class="icon-cart"></i> Add To Cart
                                    </button>
                                   
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
                {% endfor %}
                
            </div>
        </div>
    </div>
</div>
{% if section.settings.clcbnr_btmimg != blank %}
<div class="bottom-banner bottom-line">
    <div class="container">
        <div class="white-bg">
            <div class="banner-section">
                <img src="{{section.settings.clcbnr_btmimg | img_url: ''}}" alt="">
            </div>
        </div>
    </div>
</div>
{% endif %}

{% schema %}
    {
        "name": "Collection Products",
        "class": "collection-products",
        "settings": [
            
            {
              "type": "image_picker",
              "id": "prdct_bgimg",
              "label": "Select Product Background Image"
            },
            {
              "type": "image_picker",
              "id": "clcbnr_btmimg",
              "label": "Select Bottom Banner Image"
            }    
           
            
        ] 
        
    }
{% endschema %}

{% style %}
.catalog-page h1 {
    text-align: center;
    padding-top: 30px;
}
{% endstyle %}

