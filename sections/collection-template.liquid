<div class="catalog-page">
    <div class="container">
        <div class="mini-wrap">
            <h1>Choose Your CuraLin Bundle</h1>
            <div class="product-list">
                {% for product in collection.products  -%}
                    <div class="product-card" style="width: calc(100% / {{ collection.products.size }})">
                        <div class="wrap">
                            <div class="picture" {% if collection.products.size>3 %}style="height:180px"{%endif%}>
                                {% if section.settings.prdct_bgimg != blank %}
                                    <div class="bg">
                                        <img src="{{section.settings.prdct_bgimg | img_url: ''}}" alt="">
                                    </div>
                                {% endif %}

                                {% if product.featured_image.src != blank %}
                                    <a href="{{ product.url }}">
                                        <div class="img">
                                            <img src="{{ product.featured_image.src | img_url: '600x600' }}" alt="">
                                        </div>
                                    </a>
                                {% endif %}
                            </div>
                            <div class="info">
                                <div class="main">
                                    {% assign quantity = product.metafields.my_fields.pack_items_quantity %}
                                    {% assign quantity_by_cents = quantity | times: 100 %}
                                    {% assign item_price = product.price | divided_by: quantity_by_cents | times: 100 %}
                                    {% assign original_item_price = product.metafields.my_fields.original_item.value.price %}
                                    <div class="name">
                                        <h3>
                                            <a href="{{ product.url }}">{{ product.title }}</a>
                                        </h3>
                                    </div>
                                    <p class="supply-days">Up To {{ product.metafields.my_fields.supply_days }} Days Supply</p>
                                    <div class="price">
                                        {% if quantity > 1 %}
                                            <p id="divided-price">
                                                <strike>{{ original_item_price | money_without_trailing_zeros }}</strike>
                                                {{ item_price | money_without_trailing_zeros }} Per Bottle</p>
                                        {% elsif product.compare_at_price > product.price %}
                                            <p id="discounted-price">
                                                <strike>{{ product.compare_at_price | money_without_trailing_zeros }}</strike>
                                                {{ product.price | money_without_trailing_zeros }}</p>
                                        {% else %}
                                            <p id="original-price">{{ product.price | money_without_trailing_zeros }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <form action="/cart/add" method="post">
                                    <input type="hidden" name="id" value="{{ product.variants.first.id }}"/>
                                    <input name="return_to" type="hidden" value="/cart/">
                                    <div class="btn">
                                        <button class="main-btn" type="submit">
                                            <i class="icon-cart"></i>
                                            Add To Cart
                                        </button>
                                    </div>
                                </form>
                                <p class="discount-notice mobile">Sale discount will be automatically applied at checkout.</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <p class="discount-notice desktop">Sale discount will be automatically applied at checkout.</p>
        </div>
    </div>
</div>

{% schema %}

{
    "name": "Collection Products",
    "class": "collection-products",
    "settings": [
        {
            "type": "image_picker",
            "id": "prdct_bgimg",
            "label": "Select Product Background Image"
        }, {
            "type": "image_picker",
            "id": "clcbnr_btmimg",
            "label": "Select Bottom Banner Image"
        }
    ]
}

{% endschema %}

{% style %}

.catalog-page h1 {
    text-align: center;
    padding-top: 30px;
}

.price p strike {
    color: #01C6B2;
}

.supply-days {
    font-size: 16px;
    text-align: center;
    line-height: 0;
    font-weight: 200;
}

.discount-notice {
    color:#f32e7c;
    font-weight: bold;
    text-align: center;
}

.discount-notice.desktop {
    font-size: 20px;
    margin: 0;
    padding-bottom: 50px;
}

.discount-notice.mobile {
    display: none;
}

@media screen and (max-width: 760px) {
    .discount-notice.desktop {
        display: none;
    }

    .discount-notice.mobile {
        display: block;
    }

    .product-card .picture .img img{
        max-height: unset;
    }

    .product-card .info .name h3 {
        font-size: 30px;
    }
}

{% endstyle %}

