<div class="hero-banner">
  <div class="container">
   
    <div class="holiday-sale">
        <div class="snowflakes">
           {% for i in (1..4) %}
           <div class="snowflake">
             {% assign imgUrl = "hs-snowflake-0" | append: i | append: ".png" %}
             <img src="{{ imgUrl | asset_url }}" alt="" loading="lazy">
           </div>
           {% endfor %}
        </div>
       
        <div class="text-button">
        <div class="holiday-title">
            Give yourself
            a gift this season!
        </div>
        <a class="main-btn" id='main-cta-btn' href="/collections/all-bfcm2022">SHOP NOW</a></div>
       
        <img class="main-img" src="{{ 'hs-man-woman.png' | asset_url }}" alt="man-woman" loading="lazy">
        <img class="shadow-img" style="position: absolute;
        right: 24px;
        bottom: 0px;
        object-fit: contain;
        height: max(147px, 26vw);" src="{{ 'hs-img-shadow.png' | asset_url }}" alt="shadow" loading="lazy">
    
     </div>
   </div> 
   <div class="bottom-snow">
      <img  src="{{ 'hs-bottom-snow.png' | asset_url }}" alt="bottom-snow" loading="lazy">
   </div>     
 </div>
 


<style>
    .snowflake {
        position: absolute;
        z-index: -1;       
    }

    .snowflake img {
        max-width: 70%;
    }

    .snowflake:nth-child(4){
        top:0;
        left: 50px;
        height: max(150px, 20vw);
    }

    .snowflake:nth-child(3){
        top:0;
        left: 120px;
    }
    .snowflake:nth-child(2){
        top:0;
        right: 150px;
    }

    .snowflake:nth-child(1){
        top:0;
        right: 50px;
    }
    .hero-banner {
        position: relative;
        background-color: #B5141F;       
        overflow: hidden;
        height: max(300px,27vw);
        
    }

    .hero-banner .bottom-snow {
        position: absolute;
        bottom: 0;
        z-index: 0;
        width: 100%;
        
    }

    .hero-banner .bottom-snow img {
        width: 100%;
    }

  .hero-banner .container {
      height: 100%;
      position: relative;
      z-index: 0;
  }



  .hero-banner .container .holiday-sale {
      display: flex;
      justify-content: center;
  }
  .hero-banner .container .holiday-sale .text-and-img {
    display: flex;
  }

  .hero-banner .container .holiday-sale .text-button {
    display: flex;
    flex-direction: column;
    padding-bottom: 3vw;
    padding-top: 2vw;
    gap: 1vw;
    position: absolute;
    left: 250px;
    z-index: 3;
  }

  .hero-banner .container .holiday-sale .text-button .holiday-title {
    max-width: 295px;
    font-family: 'PP Radio Grotesk';
    font-weight: 700;
    font-size: clamp(45px, 2vw, 80px);
    color: #FFFFFF;
  }

  .container .holiday-sale .text-button .main-btn {
    max-width: 205px;
      font-family: 'PP Radio Grotesk';
      font-weight: 700;
      background: #4B643D;
      text-align: center;
      color: #FFFFFF;
      border: #4B643D;
      border-radius: 4px;
      font-size: clamp(20px, 2vw, 28px);
  }

 
  .container .holiday-sale .main-img {   
      position: absolute;
      right: 230px;
      bottom: 0px;
      object-fit: contain;
      height: max(300px,26vw);
      z-index: 3;
  }



  @media screen and (max-width: 1008px){
    .snowflake img {
        max-width: 50%;
    }

    .snowflake:nth-child(3) {
        left: 6vw;
    }

    .snowflake:nth-child(4) {
        left: 2vw;
    }

    .hero-banner .container .holiday-sale .text-button {
        left: 11vw; 
        padding-top: 6vw;
    }

    .container .holiday-sale .main-img {
        right: 15vw;
    }

  }

  @media screen and (max-width: 760px) {

    .snowflake:nth-child(1) {
        display: none;
    }

    .snowflake:nth-child(4) {
        display: none;
    }

    .snowflake:nth-child(2) {
        right: -6vw;
    }

    .snowflake:nth-child(3) {
        left: unset;
        right: 0;
    }
      .hero-banner {
        height: max(100vw, 32vw);
      }

      .container .holiday-sale .text-button .main-btn {
        max-width: 50vw;
        
      }

      .hero-banner .container .holiday-sale .text-button {
        padding-top: 10vw;
      }
 
      .container .holiday-sale .main-img {
          position: absolute;
          bottom: 0;
          width: unset;
          object-fit: cover;
          max-width: 100vw;
          height: max(59vw, 29vw);
          right: 10vw;
      }
  }
</style>


<script>
    $("#hero-cta").click(function () {
        $([document.documentElement, document.body]).animate({
            scrollTop: $("#product-section").offset().top + 130
        }, 2000);
    });
</script>