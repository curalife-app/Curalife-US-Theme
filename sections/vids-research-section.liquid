{% if section.settings.setion_top_heading != blank or section.settings.setion_heading or  section.settings.description != blank %}
	    <section class="refrance-sec">

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="refrance-study">
                        {% if section.settings.setion_top_heading != blank %}
                      			<p>{{ section.settings.setion_top_heading }}</p>
                      	{% endif %}
                        {% if section.settings.setion_heading != blank %}
                      		<h5>{{ section.settings.setion_top_heading }}</h5>
                      	{% endif %}
                      	{{ section.settings.description }}                        
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}
{% schema %}
  {
    "name": "Resarch",
    "settings": [
		{
          "type": "text",
          "id": "setion_top_heading",
          "label": "Top Heading"
        },
		{
          "type": "text",
          "id": "setion_heading",
          "label": "Heading"
        },
		{
          "type": "html",
          "id": "description",
          "label": "Description"
        }
	]
  }
{% endschema %}


