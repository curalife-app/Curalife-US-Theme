<div class="advantages-section">
    <div class="container">
        <div class="sub-title wow fadeInUp">
            <h2>{{ section.settings.title }}</h2>
        </div>
        <div class="advantages-wrap wow fadeInUp">
            <ul>
                {% for block in section.blocks %}
                <li>
                    <div class="icon-wrap">
                        <span><img class="lazyload" data-src="{{ block.settings.assets | img_url : 'master' }}" alt=""></span>
                    </div>
                    <div class="name">
                        <p>{{ block.settings.name }}</p>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% schema %}
    {
    "name": "Advantages",
    "settings": [
    {
    "type": "textarea",
    "id": "title",
    "label": "Title"
    }
    ],
    "blocks": [
    {
    "type": "team",
    "name": "Block",
    "settings": [
    {
    "type": "image_picker",
    "id": "assets",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "name",
    "label": "Name"
    }
    ]
    }
    ]
    }
{% endschema %}