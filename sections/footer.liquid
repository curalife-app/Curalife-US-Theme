"label": "Add Link"
}

]
},
{
"type": "payment",
"name": "Payment Images",
"settings": [

]
}

]
}
{% endschema %}

{% style %}
footer .payment-methods ul:nth-child(2) {
display: none;
}

footer .phone-title {
line-height: 2.5;
}

footer .show-phone-btn {
background: white;
border-radius: 10px;
cursor: pointer;
color: var(--green);
padding: 3px 10px;
margin-left: 5px;
}

footer .show-phone-content {
display: none;
}

footer .social-bar {
max-width: 500px;
}

footer .footer-column {
padding-bottom: 30px;
}

.main-side .menu-list ul {
display: flex;
flex-direction: column;
flex-wrap: wrap;
max-height: 300px;
}

.main-side .menu-list ul li {
margin-right: 50px
}

@media screen and (max-width: 760px){
footer .footer-columns {
font-size: 20px;
}

.footer-column .title {
min-height: 80px;
}

.main-side .menu-list ul {
flex-wrap: nowrap;
max-height: unset;
}
}

{% endstyle %}
{% javascript %}

{% endjavascript %}
<script>
  Array.from(document.getElementsByClassName("show-phone-btn")).forEach(function (e) {
    e.addEventListener('click', (event) => {
      event.target.style.display = 'none';
      event.target.nextElementSibling.style.display = 'block';
    })
  })
</script>