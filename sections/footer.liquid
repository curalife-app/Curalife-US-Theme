]
},
{
"type": "social",
"name": "Social Media",
"settings": [
{
"type": "text",
"id": "socil_icn",
"label": "Phone Icon",
"default": "icon-tel"
},
{
"type": "text",
"id": "socil_title",
"label": "Title",
