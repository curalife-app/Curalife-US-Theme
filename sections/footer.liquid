<footer>
  <div class="top-info">
    <div class="container">
      <div class="info-wrap">
        <div class="main-side footer-column">  
          <div class="title">
            <div class="logo">
              <a href="{{section.settings.lgo_ftrlink}}"><img src="{{'logo-white_afbea3d6-ff19-4fc9-a60f-0a5c8acb717a.png' | file_url }}"
                  width="183px" height="52px" alt="" loading="lazy"></a>
            </div>
          </div>
        
          <div class="menu-list">
            {% for block in section.blocks %}
            {%- assign footer_linklist = block.settings.footer_linklist -%}
            {% if linklists[footer_linklist].links.size > 0 %}
            <ul>
              {% for link in linklists[footer_linklist].links %}
              <li><a href="{{link.url}}" {% if link.url contains 'professionals' or link.url contains 'retail' %}
                  rel="nofollow" {% endif %}>{{link.title}}</a></li>
              {% endfor %}
            </ul>
            {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="right-column footer-column">
          <div class="support-contacts">
            <div class="title">
              <h3>24/7 CUSTOMER SUPPORT</h3>
            </div>
            {% assign phones = 'phone-1&US-Toll-Free$+1 888 286 7307
            |phone-2&UK-Toll-Free$+44 800 086 9122
            |phone-3&AU-Toll-Free$+61 1800 942 961' | split: '|' %}
            <ul>
              {% for phone in phones %}
              <li>
                <div class="phone-title">
                  <span><img src="{{ phone | split: '&' | first | append: ".png" | file_url }}" alt="" width="20" height="20" loading="lazy"></span>
                  {{ phone | split: '&' | last | split: "$" | first }}:
                </div>
                <div class="show-phone">
                  <div class="show-phone-btn"><i class="icon-tel"></i> Show Phone</div>
                  <div class="show-phone-content">
                    {% assign phone_number = phone | split: '&' | last | split: "$" | last %}
                    <a href="tel:{{ phone_number }}">{{ phone_number }}</a>
                  </div>
                </div>
              </li>
              {% endfor %}
            </ul>
          </div>
          <div class="social-bar">
            <div class="title">
              <h3>FOLLOW US ON</h3>
            </div>
            <ul>
              {% for block in section.blocks %}
              {% if block.type == 'social' %}
              <li><a href="{{ block.settings.socil_link }}" target="_blank"><i
                    class="{{ block.settings.socil_icn }}"></i></a></li>
              {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>

      </div>
      <div class="text">
        <p>{{section.settings.ftr_desc}}</p>
      </div>
    </div>
  </div>
  <div class="bottom-info">
    <div class="container">
      <div class="mini-wrap">
        <div class="info-wrap">
          <div class="text">
            <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</p>
          </div>
          <div class="payment-methods">
            {% assign payments = 'amex.png
            |apple-pay.png
            |mastercard.png
            |paypal.png
            |visa.png
            |afterpay.png' | split: '|' %}
            <ul>
              {% for payment in payments %}
             
              <li><span><img src="{{ payment | file_url }}" width="51px" height="32px" alt="" loading="lazy"></span>
              </li>
           
              {% endfor %}
            </ul>
          </div>
          <div class="text">
            <p>{{section.settings.alrght_titl}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

</footer>

<div class="modals-wrap">
  {% render 'cart-drawer'%}
</div>

