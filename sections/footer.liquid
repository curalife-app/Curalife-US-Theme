<footer>
    <div class="top-info">
        <div class="container">
            <div class="mini-wrap">
                <div class="info-wrap">
                    <div class="main-side">
                      {% if section.settings.ftr_logoimage != blank %}
                        <div class="logo">
                           
                            <a href="{{section.settings.lgo_ftrlink}}"><img src="{{section.settings.ftr_logoimage | img_url: ''}}" alt=""></a>
                        </div>
                         {% endif %}
                        <div class="menu-list">
                          {% for block in section.blocks %}
                          {%- assign footer_linklist = block.settings.footer_linklist -%}
                          {% if linklists[footer_linklist].links.size > 0 %}
                            <ul>
                              {% for link in linklists[footer_linklist].links %}
                                <li><a href="{{link.url}}">{{link.title}}</a></li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                            {% endfor %}
                        </div>
                        <div class="text">
                            <p>{{section.settings.ftr_desc}}</p>
                        </div>
                    </div>
                    <div class="data-side">
                        <div class="support-contacts">
                            <div class="title">
                                <h3>{{section.settings.ftr_titl}}</h3>
                            </div>
                            <ul>
                                {% for block in section.blocks %}
                                {% if block.type == 'contact' %}
                                <li>
                                  {% if block.settings.phn_img != blank %}
                                  <span>
                                    <img src="{{block.settings.phn_img | img_url: ''}}" alt="">
                                  </span>
                                  {% endif %}
                                    {{block.settings.phn_title}} <a href="tel:{{block.settings.phn_numbr}}">
                                        <i class="{{block.settings.phn_icn}}"></i> {{block.settings.phn_numbr}}</a></li>
                                {% endif %}
                                {% endfor %}
                               
                            </ul>
                        </div>
                        <div class="social-bar">
                            <ul>
                              {% for block in section.blocks %}
                                {% if block.type == 'social' %}
                                <li><a href="{{block.settings.socil_link}}" target="_blank" rel="nofollow">
                                    <i class="{{block.settings.socil_icn}}"></i> {{block.settings.socil_title}}</a></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="mobile-text d-mobile">
                        <div class="text">
                            <p>{{section.settings.ftr_desc}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom-info">
        <div class="container">
            <div class="mini-wrap">
                <div class="info-wrap">
                    <div class="text">
                        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</p>
                    </div>
                    <div class="payment-methods">
                        <ul>
                          {% for block in section.blocks %}
                                {% if block.type == 'payment' %}
                                {% if block.settings.pymnt_img != blank %}
                            <li><span><img src="{{block.settings.pymnt_img | img_url: ''}}" alt=""></span></li>
                             {% endif %}
                             {% endif %}
                                {% endfor %}
                        </ul>
                    </div>
                    <div class="text">
                        <p>{{section.settings.alrght_titl}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</footer>

<div class="modals-wrap">

    <!--

    to call the modal use $.fancybox.open({src: "#mydiv"});

    add to a button "class='open-modal' data-fancybox data-src='#mydiv'" to call a modal

    -->

   {% include 'cart-drawer'%}
   {% include 'login-popup'%}
   {% include 'thanks-popup'%}
   {% include 'logout-popup'%}
   {% include 'password-popup'%}
   {% include 'delete-popup'%}
   {% include 'card-popup'%}
   {% include 'offer-modal'%}
</div>

{% schema %}
  {
    "name": "Footer",
    "class":"footer_section",
    "settings": [
      {
        "type": "image_picker",
        "id": "ftr_logoimage",
        "label": "Logo image"
      },
      {
        "type": "url",
        "id": "lgo_ftrlink",
        "label": "Logo Link"
      },
      {
        "type": "text",
        "id": "ftr_titl",
        "label": "Title",
        "default": "Enter Yor title"
       },
       {
        "type": "textarea",
        "id": "ftr_desc",
        "label": "Description",
        "default": "Enter Yor Description"
       },
       {
        "type": "text",
        "id": "alrght_titl",
        "label": "All Rights Title",
        "default": "All Rights Title"
       }
       
       
    ],
    "blocks": [
    {
            "type": "menu",
            "name": {
                "en": "Menu",
                "de": "Menü",
                "es": "Menú",
                "fr": "Menu",
                "pt-PT": "Menu"
            },
            "settings": [
                {
                    "type": "text",
                    "id": "menu_title",
                    "label": {
                        "en": "Heading",
                        "de": "Überschrift",
                        "es": "Encabezado",
                        "fr": "Rubrique",
                        "pt-PT": "Título"
                    },
                    "default": {
                        "en": "Links",
                        "de": "Links",
                        "es": "Enlaces",
                        "fr": "Liens",
                        "pt-PT": "Ligações"
                    }
                },
                {
                    "type": "link_list",
                    "id": "footer_linklist",
                    "label": {
                        "en": "Menu",
                        "de": "Menü",
                        "es": "Menú",
                        "fr": "Menu",
                        "pt-PT": "Menu"
                    },
                    "default": "main-menu"
                }
            ]
        },
        {
          "type": "contact",
          "name": "Contact Numbers",
            "settings": [
              {
                "type": "image_picker",
                "id": "phn_img",
                "label": "Select Image"
              },    
              {
                "type": "text",
                "id": "phn_title",
                "label": "Title",
                "default": "Enter Title"
              },
              {
                "type": "text",
                "id": "phn_icn",
                "label": "Phone Icon",
                "default": "icon-tel"
              },
              {
                "type": "text",
                "id": "phn_numbr",
                "label": "Contact Number",
                "default": " Enter Phone Number "
              }
        
            ]    
          },
          {
          "type": "social",
          "name": "Social Media",
            "settings": [
              {
                "type": "text",
                "id": "socil_icn",
                "label": "Phone Icon",
                "default": "icon-tel"
              },
              {
                "type": "text",
                "id": "socil_title",
                "label": "Title",
                "default": "Enter Title"
              },
              {
                "id": "socil_link",
                "type": "url",
                "label": "Add Link"
              }
        
            ]    
          },
          {
          "type": "payment",
          "name": "Payment Images",
            "settings": [
              {
                "type": "image_picker",
                "id": "pymnt_img",
                "label": "Select Image"
              }
        
            ]    
          }

  ]
  }
{% endschema %}

