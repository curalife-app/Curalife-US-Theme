<header>
  <div class="container">
    <div class="main-toolbar">
      <div class="main-links d-mobile">
        <ul>
          <li><a href="javascript:void(0)" class="open-menu"><i class="icon-menu"></i></a></li>
          <li><a href="javascript:void(0)" class="open-search"><i class="icon-search"></i></a></li>
        </ul>
      </div>
      <div class="main-logo">
        <a href="/"><img src="{{ "hs-santa-logo.png" | asset_url }}" alt="logo"></a>
      </div>
      <div class="main-menu">
        <div class="menu-scroll">
          <ul>
            {% for link in linklists[section.settings.main_linklist].links %}
              {% if link.links == blank  %}
                <li><a class="notranslate" href="{{ link.url }}">{{ link.title }}</a></li>
              {% else %}
                <li class="dropdown"><a href="{{ link.url }}">{{ link.title }}</a>
                  <div class="dropdown-menu">
                    {% if link.links != blank %}
                      <ul class="child">
                        {% for child_link in link.links %}
                          <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </div>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>

      <div class="main-links">
        <ul>
          {% if customer %}
            <li><a href="/account">
            <i class="icon-user"></i><span>{% if customer.first_name %}Welcome {{customer.first_name | capitalize}}!{% else %}My Account{% endif %}</span></a></li>
          {% else %}
            <li><a href="/account/login"><i class="icofont-ui-user"></i><span>Account</span></a></li>
          {% endif %}
          <li>
            <a href="javascript:void(0)" class="open-modal" data-fancybox data-src="#side-cart">
            <i class="icofont-shopping-cart" data-items="{{ cart.item_count }}"></i><span>Cart </span>
            {% if cart.item_count > 0 %}<span class="header_cart_count">{{ cart.item_count }}</span>{% endif %}
            </a>
          </li>
          <li><selector data-type="currencies" data-id="48859440"></selector></li>
        </ul>
      </div>
    </div>
  </div>
</header>

<script>
  $('.main-menu ul li').click(() => {
    woopra.track('Clicked on Header Link', { link_to: $(this).find("a").attr("href") });
  })
</script>

<style>
  header {
    position: static;
    background: white;
    box-shadow: 0px 4px 40px rgb(0 0 0 / 25%);
  }

  header .main-toolbar {
    padding: 20px 0;
    justify-content: unset;
    gap: 50px;
  }

  header .main-toolbar .main-menu {
    margin-right: auto;
  }

  .main-menu ul li.dropdown .dropdown-menu {
    margin-top: 20px;
    padding: unset;
    background: white;
    box-shadow: 0px 20px 25px rgb(0 0 0 / 25%);
    transition: all var(--transition);
    z-index: 100;
  }

  .main-menu ul li.dropdown:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
  }

  .main-menu ul li.dropdown .dropdown-menu ul:before {
    border: unset;
  }

  .header_cart_count {
    border-radius: 50px;
    width: 20px;
    height: 20px;
    justify-content: center;
    align-items: center;
    display: inline-flex !important;
    background-color: var(--dark-green);
    color: white;
    font-weight: bold;
    margin-left: 10px;
  }

  @media (width <= 760px) {
    header {
      position: fixed;
    }

    .main-menu ul {
      flex-direction: column;
    }

    .main-menu ul li {
      width: 100%;
      display: block;
      border-bottom: 1px solid rgba(0,0,0,.05)
    }

    .main-menu ul li.dropdown .dropdown-menu {
      max-height: 0px;
      position: static;
      overflow: hidden;
    }

    .main-menu ul li.dropdown.open .dropdown-menu {
      max-height: 100vh;
    }

    .main-menu ul li.dropdown .dropdown-menu {
      box-shadow: unset;
      width: 100%;
      margin-top: unset;
    }

    .main-menu ul li.dropdown .dropdown-menu ul {
        padding-inline-start: 15px;
    }

    .main-menu ul li.dropdown .dropdown-menu ul li a {
      padding: 15px 0;
      font-size: 20px;
    }

    .header_cart_count {
      margin-left: 0;
    }
  }
</style>

<script>
  if( $('header').css('position')=='fixed') {
    $('body').css('padding-top', $('header').height() + 'px');
  }
</script>

{% schema %}
  {
  "name": "Header",
  "settings": [
    {
    "type": "header",
    "content": "Menu"
  },
    {
      "type": "link_list",
      "id": "main_linklist",
      "label":"Men√º",
      "default": "main-menu"
    }
  ]
  }
{% endschema %}