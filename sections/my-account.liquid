                <div class="account-data"> 
                    <div class="data-row" id="a">
                        <div class="data-wrap with-border">
                            <div class="data-title">
                                <h3>Contact Information</h3>
                            </div>
                            <div class="data-content">
                                <div class="contact-info">
                                    <ul>
                                        
                                        <li><p>First Name<span>{{ customer.first_name }}</span></p></li>
                                        <li><p>Last Name<span>{{ customer.last_name }}</span></p></li>
                                        <li><p>Email<span>{{ customer.email }}</span></p></li>
                                        <li><p>Password<span>{{ customer.password }}</span></p></li>
                                        
                                    </ul>
                                </div>
                                <div class="data-btn">
                                    <a href="/account/addresses" class="main-btn blank">Edit <i
                                            class="icon-edit"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="data-wrap with-border">
                            <div class="data-title">
                                <h3>Shipping Addresses</h3>
                            </div>
                            <div class="data-content">
                                <div class="shipping-addresses">
                                    <div class="empty-text">
                                        <p><span class="icon-shipping"></span>You don't have a<br> shipping address yet.
                                        </p>
                                    </div>
                                </div>
                                <div class="data-btn">
                                    <a href="/account/addresses" class="main-btn blank">add adress</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="data-wrap" id="b">
                        <div class="data-title">
                            <h3>Your Orders</h3>
                        </div>
                        {% if order.attributes %}
                        <div class="data-list">
                            <ul>
                                
                                {% for a in order.lineItems %}

                                <li>
                                    <div class="order-head">
                                        <div class="number">
                                            <p>Order {{ order.order_number }}</p>
                                        </div>
                                        <div class="date">
                                            <p>{{ order.created_at | date: format: 'abbreviated_date' }}</p>
                                        </div>
                                        <div class="more">
                                            <p><a href="javascript:void(0)">Dowload invoice</a></p>
                                        </div>
                                    </div>
                                    <div class="order-body">
                                        <div class="order-item">
                                            <div class="rows-wrap">
                                                <div class="img-wrap">
                                                    <span><img src="images/product/slider/01.1.png" alt=""></span>
                                                </div>
                                                <div class="name">
                                                    <p>{{ product.title }}</p>
                                                </div>
                                            </div>
                                            <div class="value">
                                                <p>{{a.sku}} -capsule bottle</p>
                                            </div>
                                            <div class="quantity">
                                                <p>Quantity: ( {{a.quantity}} )</p>
                                            </div>
                                            <div class="price">
                                                <p>{{order.total_price}}</p>
                                            </div>
                                            <div class="status done">
                                                <p><span>{{ order.fulfillment_status }}</span></p>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="view-details d-mobile">
                                        <div class="more-btn">
                                            <p><a href="javascript:void(0)">Dowload invoice</a></p>
                                        </div>
                                    </div>
                                </li>
                                
                               {% endfor %}
                             
                            </ul>
                        </div>
                        {% else %}
                                <div class="data-content">
                                <div class="empty-content">
                               <div class="empty-text">
                                   <p><span class="icon-smile"></span>You haven't placed any orders yet.</p>
                                   <a href="{{section.settings.ord_btnlink}}" class="main-btn blank">SHOP NOW</a>
                               </div>
                           </div>
                       </div>
                           {% endif %}
