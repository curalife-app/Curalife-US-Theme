                                    <span class="icon-password"></span>
                                </div>
                                {% form 'reset_customer_password' %}
                                    <div class="form-fields">
                                        <label class="full-size">
                                            <input type="password" placeholder="Old password" name="customer[old_password]">
                                        </label>
                                        <label class="full-size">
                                            <input type="password" placeholder="New password" name="customer[new_password]">
                                        </label>
                                        <label class="full-size">
                                            <input type="password" placeholder="Re-enter new password " name="customer[password_confirmation]">
                                        </label>
                                    </div>
                                    <div class="submit-wrap">
                                        <div class="submit-form">
                                            <button type="submit" class="main-btn">Save</button>
                                        </div>
                                    </div>
