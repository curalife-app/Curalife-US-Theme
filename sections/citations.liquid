<style>
	.references-list .cstm {
    max-width: 1060px;
    margin: 0 auto;
    width: 100%;
    padding: 40px 20px 20px;
}
	.template {
    background: #f5f5f5;
    max-width: 100%;
    margin: 0;
    padding: 5px 0 30px!important;
    
    width: 100%;
}
	.citation .faqs li {
    word-wrap: break-word !important;
    font-size: 16px;
    line-height: 28px;
    color: #9d9d9d;
    position: relative;
    padding: 5px 5px;
    list-style-type: decimal;
}
.template .citation h3 {
    font-size: 25px;
    padding: 39px 0 9px 0;
    color: #3c3838;
    display: inline-block;
    font-family: 'Lato', sans-serif;
    font-weight: 500;
}
.references-list.template .citation ol {
    margin: 0 0 1.5em 3em;
}
@media only screen and (max-width: 640px){
	.citation .faqs li {
		font-size: 14px;
	}
}
</style>
<section class="references-list template">
<div class="cstm">
<div class="citation">
<h3>{{section.settings.cit_title}}</h3>
<ol class="faqs">
	{% for block in section.blocks %}
	  {% case block.type %} 
                      {% when 'citlist-item' %}
					<li >{{block.settings.list-content}}</li>
 {% endcase %}   
                      {% endfor %}

</ol>
</div>
</div>
</section>
{% schema %}
  {
    "name": "Citations",
    "settings": [
    	 {
                    "type": "text",
                    "id": "cit_title",
                    "label": "Add Title"
                  }
        
    ],
    "blocks": [
            {
                "type": "citlist-item",
                "name": "List Item",
                "settings": [
                   {
                    "type": "textarea",
                    "id": "list-content",
                    "label": "Add List Content"
                  }
                ]
            }
    ]
  }
{% endschema %}