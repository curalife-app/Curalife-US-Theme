<div class="gray-bg">
    <div class="mini-wrap">
        <div class="ingredients-section">
            <div class="sub-title">
                <h2>{{section.settings.pwing_ntrtitl}}</h2>
            </div>
            <div class="ingredients-slider">
                <div class="main-slider">
                    <div class="swiper-container">
                        <div class="nav-wrap">
                            <div class="prev-slide"><span class="icon-arrow"></span></div>
                            <div class="next-slide"><span class="icon-arrow"></span></div>
                        </div>
                        <div class="swiper-wrapper">
                            {% for block in section.blocks %}
                            {% if block.type == 'natural_ingred' %}

                            <div class="swiper-slide">
                                <div class="ingredient-item">
                                    <div class="text-wrap">
                                        <div class="name">
                                            <h4>{{block.settings.pwing_sldtitl}}</h4>
                                        </div>
                                        <div class="description">
                                            <p>{{block.settings.pwing_desc}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="thumbs-slider">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                             {% for block in section.blocks %}
                            {% if block.type == 'natural_ingred' %}
                            {%if block.settings.pwing_img != blank %}
                            <div class="swiper-slide">
                                <div class="ingredient-item">
                                    <div class="img-wrap">
                                        <img data-src="{{ block.settings.pwing_img | img_url: '' }}" alt="" class="lazyload"> 
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                            {% endif %}
                            {% endfor %}
                            
                        </div>
                        <div class="pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% schema %}
    {
    "name": "Natural Ingredients",
        "settings": [
            
            {
                "type": "text",
                "id": "pwing_ntrtitl",
                "label": "Title",
                "default": "Enter title"
            }
            
   
        ],
        "blocks": [
            {
                "type": "natural_ingred",
                "name": "Natural Ingredients",
                "settings": [ 
                    {
                        "type": "text",
                        "id": "pwing_sldtitl",
                        "label": "Title",
                        "default": "Enter title"
                    },
                    {
                        "type": "textarea",
                        "id": "pwing_desc",
                        "label": "Description",
                        "default": "Enter Description"
                    },   
                    {
                        "type": "image_picker",
                        "id": "pwing_img",
                        "label": "Select Image"
                    }
                   
                
                ]    
            }
        ],
        "presets":[
            {
                "name": "Natural Ingredients",
                "category": "slider"
            }
        ]
    }
{% endschema %}

{% style %}
.nav-wrap {
    bottom: unset;
    position: unset;
    justify-content: start;
    margin-bottom: 20px;
}
{% endstyle %}

