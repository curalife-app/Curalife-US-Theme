<div id="prdct_inside" class="inside-product">
        <div class="container">
            <div class="sub-title wow fadeInUp">
                <h2>{{ section.settings.title }}</h2>
            </div>
            <div class="data wow fadeInUp">
                <div class="img">
                    <img class="lazyload" data-src="{{ section.settings.image | img_url : 'master' }}" alt="">
                </div>
                <div class="inside-slider">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                          {% for block in section.blocks %}
                            <div class="swiper-slide">
                                <div class="inside-info">
                                    <div class="text">
                                        <h4>{{ block.settings.title }}</h4>
                                        <p>{{ block.settings.text }}</p>
                                    </div>
                                    <div class="picture">
                                        <img class="lazyload" data-src="{{ block.settings.image | img_url : 'master' }}" alt="">
                                    </div>
                                </div>
                            </div>
                          {% endfor %}
                        </div>
                        <div class="button-prev"><span class="icon-next"></span></div>
                        <div class="button-next"><span class="icon-next"></span></div>
                        <div class="pagination"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>


{% schema %}
    {
    "name": "Inside Product",
    "settings": [
    {
    "type": "textarea",
    "id": "title",
    "label": "Title"
    },
{
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    }
    ],
    "blocks": [
    {
    "type": "team",
    "name": "Slide",
    "settings": [
{
    "type": "text",
    "id": "title",
    "label": "Title"
    },
    {
    "type": "textarea",
    "id": "text",
    "label": "Text"
    },
{
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    }
    ]
    }
    ]
    }
{% endschema %}