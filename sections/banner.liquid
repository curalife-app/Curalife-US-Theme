}

{% endschema %}

{% style %}

.banner-background {
  object-fit: cover;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10;
  opacity: 0.7;
}

.title-black-friday {
position: relative;
z-index: 20;
}

.title-black-friday.mobile {
display: none;
}

.title-sale {
  margin-top: -8%;
  position: relative;
  z-index: 20;
  pointer-events: none;
  max-width: 40%;
}

.title-limited-time {
  margin-bottom: 80px;
  font-weight: bold;
  font-size: 25px;
}

.curalin-bottle {
  right: 0;
  bottom: -60px;
  position: absolute;
  max-width: 30%;
}

.badges-container {
  position: relative;
  z-index: 30;
  background-color: black;
  padding: 10px 20px;
}

.badges {
  display: flex;
  position: relative;
  bottom: 0;
  align-items: center;
  color: white;
  max-width: 70%;
  justify-content: space-between;
}

.badges .badge {
  margin-right: 5%;
  display: flex;
  align-items: center;
  width: 30%;
}

.badges .badge img {
  margin-right: 10px;
  height: fit-content;
}

.intro-wrap {
  padding: 20px 0;
}

.cstm_page.page-intro.with-bg {
  background-color: black;
}

.cstm_page.page-intro.with-bg .intro-bg span {
  background-color: #E9C8C7;
}

.cstm_page.page-intro.with-bg .cstm_introwrp.intro-wrap .data-wrap {
  width: 100%;
  position: relative;
}

.cstm_page.page-intro.with-bg .intro-wrap .data-wrap .intro-text {
  padding: 0;
  color: white;
  text-align: center;
  margin-top: -100px;
}

.cstm_page.page-intro .intro-wrap .data-wrap .intro-text {
  width: 100%;
  padding: 17.8% 30px 30px 0;
}

.intro-text .cstm_btn.btn {
  text-align: center;
  padding: 0;
  margin: -20px auto auto;
}

.intro-wrap .intro-text .main-btn {
  border-radius: 8px;
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  text-shadow: 0 2px 1px black;
  width: 30%;
  font-size: 30px;
  padding: 15px;
}

.cstm_page.page-intro.with-bg .intro-text .under-btn-titles {
  text-align: center;
  font-size: 16px;
}

.cstm_page.page-intro.with-bg .intro-text .under-btn-titles .money-back-title {
  margin: 25px 0 0;
}

.cstm_page.page-intro.with-bg .intro-text .under-btn-titles .free-shipping {
  display: flex;
  place-items: flex-start;
  align-items: center;
}

.cstm_page.page-intro.with-bg .intro-text .under-btn-titles .free-shipping img {
  margin: 0 10px 0 0;
  max-width: 50px;
}

.cstm_page.page-intro.with-bg .intro-bg span {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.cstm_page.page-intro.with-bg .intro-bg span img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.cstm_page.page-intro {
  background-color: #F0F1F4;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.cstm_container.container {
  width: 100%;
  max-width: 1460px;
  margin: 0 auto;
  padding: 0 10px;
  z-index: 40;
  position: relative;
}

.cstm_miniwrp.mini-wrap {
  width: 100%;
  max-width: 1230px;
  margin: 0 auto;
  padding: 0 15px;
}

.cstm_page.page-intro .cstm_introwrp.intro-wrap .data-wrap {
  width: 50%;
  display: flex;
}

#countdown {
position: relative;
top: -30px;
  color: white;
}

#countdown li {
display: inline-block;
font-size: 15px;
list-style-type: none;
text-transform: uppercase;
min-width: 110px;
}

#countdown li span {
display: block;
font-size: 60px;
font-weight: 400;
}

#countdown li:not(:last-child):before {
content: ":";
  display: block;
  font-size: 33px;
  position: relative;
  top: 50px;
  left: 58px;
}

