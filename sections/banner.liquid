<div class="cstm_page page-intro with-bg">
  <img class="banner-background" src="{{ 'bfcm-homepage-banner-background.png' | asset_img_url: 'master' }}" alt="Black Friday Background"/>
  <div class="cstm_container container">
      <div class="cstm_miniwrp mini-wrap">
          <div class="cstm_introwrp intro-wrap">
              <div class="data-wrap">
                  <div class="intro-text">
                      <img class="title-black-friday desktop" src="{{ 'bfcm-homepage-banner-title-cyber-monday.png' | asset_img_url: 'master' }}" alt="Black Friday"/>
                      <img class="title-black-friday mobile" src="{{ 'bfcm-homepage-banner-title-cyber-monday-mobile.png' | asset_img_url: 'master' }}" alt="Black Friday"/>
                      <img class="title-sale" src="{{ 'bfcm-homepage-banner-title-sale.png' | asset_img_url: 'master' }}" alt="Sale"/>
                      <div class="cstm_btn btn">
                          <a href="{{section.settings.bnr_btnlink}}" class="main-btn">SHOP NOW</a>
                      </div>
                      {% unless request.path contains 'products' %}
                  <div id="countdown">
                      <ul>
                        <li><span id="hours"></span>Hours</li>
                        <li><span id="minutes"></span>Minutes</li>
                        <li><span id="seconds"></span>Seconds</li>
                      </ul>
                    </div>
                    {% endunless %}
                      <img class="curalin-bottle" src="{{ 'bfcm-homepage-banner-curalin-bottle.png' | asset_img_url: 'master' }}" alt="Curalin Bottle Sale"/>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="badges-container">
      <div class="container">
          <div class="badges">
              <div class="badge">
                  <img src="{{ 'bfcm-homepage-banner-badge-free-shipping.png' | asset_img_url: 'master' }}" alt="Free Shipping"/>
                  <p>FREE WORLDWIDE SHIPPING</p>
              </div>
              <div class="badge">
                  <img src="{{ 'bfcm-homepage-banner-badge-money-back.png' | asset_img_url: 'master' }}" alt="60 Days Money Back Guarantee"/>
                  <p>60 DAYS MONEY BACK GUARANTEE</p>
              </div>
              <div class="badge">
                  <img src="{{ 'bfcm-homepage-banner-badge-secure-checkout.png' | asset_img_url: 'master' }}" alt="100% Secure Checkout"/>
                  <p>100% SECURE CHECKOUT</p>
              </div>
          </div>
      </div>
  </div>
</div>


