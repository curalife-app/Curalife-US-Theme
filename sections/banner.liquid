  .badges-container {
      padding: 10px;
  }

  .badges {
      max-width: 100%;
      justify-content: space-between;
  }

  .badges .badge {
      flex-direction: column;
      min-width: 30%;
      text-align: center;
      font-size: calc(8vw / 3);
  }

  .badges .badge img {
      margin-right: unset;
  }

  .curalin-bottle {
      position: static;
      max-width: 100%;
      height: 80vw;
      margin-top: -30px;
  }

  .title-black-friday.desktop {
    display: none;
  }

  .title-black-friday.mobile {
    display: block;
    top: -20px;      
  }

  .title-sale {
    margin-top: -20%;
  }

  .title-limited-time {
      display: none;
  }

  .cstm_page.page-intro .intro-wrap {
      position: unset;
      padding-top: 10px;
  }

  .intro-text .cstm_btn.btn {
      padding-top: 0;
      margin-top: unset;
  }

  .cstm_page.page-intro .intro-wrap .data-wrap {
      width: 100% !important;
      padding-bottom: 0 !important;
      z-index: 2 !important;
      position: unset;
  }

  .cstm_page.page-intro.with-bg .intro-wrap .data-wrap .intro-text {
      padding: 14px 0 0 !important;
      margin-top: unset;
  }

  .cstm_page.page-intro .intro-wrap .data-wrap .intro-text .sub-title p {
      padding-top: 9px !important;
  }

  .cstm_page.page-intro .main-btn {
      font-size: 24px;
      width: unset;
      min-width: 80%;
  }

  .cstm_page.page-intro.with-bg .intro-text .under-btn-titles {
      font-size: 16px;
      bottom: 40px;
      margin: auto;
      width: 90%;
  }

  #countdown {
      width: 100%;
      text-align: center;
      top: -20px;        
  }
  
  #countdown li {
    padding: 5px;
    font-size: 16px;
      min-width: 70px;
  }
  
  #countdown li span {
      font-size: 45px;
  }
  
  #countdown li:not(:last-child):before {
      top: 40px;
      left: 40px;
  }
}

{% endstyle %}

{% javascript %}

Number.prototype.pad = function() {
  return this < 10 ? '0' + this : this;
}

// Timer

const second = 1000,
minute = second * 60,
hour = minute * 60;

let birthday = "December 2, 2021 09:59:00";
let countDown = new Date(birthday).getTime();
let x = setInterval(function() {    
  var now = new Date().getTime();
  var distance = countDown - now;

  document.getElementById("hours").innerText = Math.floor(distance / (hour)).pad(),
  document.getElementById("minutes").innerText = Math.floor((distance % (hour)) / (minute)).pad(),
  document.getElementById("seconds").innerText = Math.floor((distance % (minute)) / second).pad();

  // do something later when date is reached
  if (distance < 0) {
      clearInterval(x);
  }
//seconds
}, 0)

{% endjavascript %}