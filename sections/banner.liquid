          "id": "btn_titl",
          "label": "Button Title",
          "default": "Enter Button Title"
      }, {
          "id": "bnr_btnlink",
          "type": "url",
          "label": "Button Link"
      }, {
          "type": "image_picker",
          "id": "bnr_img",
          "label": "Banner image"
      }, {
