        }
        else {
          console.log("bye");
          console.log(window.location.pathname);
        }

        let linksQuery = '';
        redirectPages.forEach(()=>{linksQuery += 'a[href="' + redirectPages[i] + '"], '});

        console.log(linksQuery);
        $(linksQuery).each(function () {
          $(this).attr('href', $(this).attr('href') + '-p');
        });
      }
    </script>

    {% render 'social-login' %}
  </body>
</html>