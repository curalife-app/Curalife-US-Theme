<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {%- if settings.favicon != blank -%}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {%- endif -%}

    <link rel="preload" href="{{ 'common.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="{{ 'common.css' | asset_url }}"></noscript>
<link rel="preload" href="{{ 'styles.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="{{ 'styles.css' | asset_url }}"></noscript>
    <link rel="preload" href="{{ 'styles-cookbook.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="{{ 'styles-cookbook.css' | asset_url }}"></noscript>
<script src="{{ 'jquery-3.4.1.min.js' | asset_url}}" ></script>
  <script src="{{ 'libs.js' | asset_url }}" async></script>
  <script src="{{ 'common.js' | asset_url }}" async></script>


{% assign _page_path = request.path  | split:'/' %}
{% assign _page_path_normal = request.path %}

{% if _page_path[1] == blank %}
 
<link rel="canonical" href="{{canonical_url}}" />
<link rel="alternate" href="https://curalife.com" hreflang="en-us" />
<link rel="alternate" href="https://curalife.com" hreflang="x-default" />
<link rel="alternate" href="https://curalife.com/es/" hreflang="es-us" />
<link rel="alternate" href="https://global.curalife.com/it" hreflang="it" />
<link rel="alternate" href="https://global.curalife.com" hreflang="en-gb" />
 
{% elsif _page_path[1] == "it" %}
 
<link rel="canonical" href="{{canonical_url}}" />
<link rel="alternate" href="https://curalife.com{{ _page_path_normal | remove_first: '/it' }}" hreflang="en-us" />
<link rel="alternate" href="https://curalife.com{{ _page_path_normal | remove_first: '/it' }}" hreflang="x-default" />
<link rel="alternate" href="https://curalife.com/es{{ _page_path_normal | remove_first: '/it' }}" hreflang="es-us" />
<link rel="alternate" href="https://global.curalife.com{{ _page_path_normal }}" hreflang="it" />
<link rel="alternate" href="https://global.curalife.com{{ _page_path_normal | remove_first: '/it' }}" hreflang="en-gb" />
 
{% else %}

<link rel="canonical" href="{{canonical_url}}" />
<link rel="alternate" href="https://curalife.com{{ _page_path_normal }}" hreflang="en-us" />
<link rel="alternate" href="https://curalife.com{{ _page_path_normal }}" hreflang="x-default" />
<link rel="alternate" href="https://curalife.com/es{{ _page_path_normal }}" hreflang="es-us" />
<link rel="alternate" href="https://global.curalife.com/it{{ _page_path_normal }}" hreflang="it" />
<link rel="alternate" href="https://global.curalife.com{{ _page_path_normal }}" hreflang="en-gb" />

{% endif %}

{{ content_for_header }} <!-- Header hook for plugins -->

  {% include 'head'%}

  
{% include 'google-tag-manager'%}

</head>
<body>
{% include 'google-tag-manager-noscript'%}
{% include 'hot-jar'%}
  {% section 'header'%}

  <main role="main">
    {{ content_for_layout }}	
    
    
     {% section 'footer'%}
  </main>
  
  </body>
</html>






